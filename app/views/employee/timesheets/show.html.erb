<div class='col-md-12 mainpage shadow'>
    <div class='btn-group'>
        <%= link_to "<i class='fa fa-download fa-md'></i> Download PDF".html_safe, employee_timesheet_path(@timesheet, format: :pdf), class: 'btn btn-primary'%>
        <%= link_to 'All Timesheets', employee_timesheets_path, class: 'btn btn-primary' %>
    </div>
  
<div class='col-md-12'>
  <h3>For the week of:<strong><br>
        <%= @timesheet.week_begin %>
          - 
        <%= @timesheet.week_ending %>
      </strong></h3>
  <div class='col-md-4'>
    <h4><strong>Regular hours:</strong>
    <%= @timesheet.reg_hours.round(2) %></h4>
  </div>
  <div class='col-md-4'>
   <h4> <strong>Overtime hours:</strong>
    <%= @timesheet.ot_hours.round(2) %></h4>
  </div>
    <div class='col-md-4'>
           <h4><strong>Gross pay:</strong>
        <%= number_to_currency(@timesheet.gross_pay) %></h4>
      </div>
</div>
<div class='col-md-6'>
    <%= convo_for(timesheet: @timesheet, type: :timesheet_question, back_to: employee_timesheets_path) %>
</div>
<div class='col-md-6'>
  <h4> Shifts</h4>
   <%= render 'employee/shifts/table' %>
</div>
</div>

