<%= simple_form_for [:employee, @work_history] do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
      <%= f.input :title, placeholder: "Job Title", wrapper_html: { class: 'col-md-6' }, label: "Job Title" %>
          <%= f.input :employer_name, placeholder: "Company Name", wrapper_html: { class: 'col-md-6' } %>
  </div>
  <div class="form-group">
      <%= f.input :start_date, wrapper_html: {class: "form-inline col-md-6"},
				default: Date.today, as: :date,
				order: [:month, :day, :year] %>
      <%= f.input :end_date, wrapper_html: {class: "form-inline col-md-6"},
				default: Date.today, as: :date,
				 order: [:month, :day, :year] %>
  </div>
    
	<div class='form-group'>
	  <div class="form-group">
          <%= f.input :current, as: :select, label: "Is this your current position?", include_blank: false, wrapper_html: { class: 'col-md-6' } %>
          <%= f.input :may_contact, as: :select, include_blank: false, label: "May we contact this employer?", wrapper_html: { class: 'col-md-6' } %>
          <%= f.input :supervisor, placeholder: "Supervisor name", wrapper_html: { class: 'col-md-6' } %>
          <%= f.input :phone_number, placeholder: "Phone number", wrapper_html: { class: 'col-md-6' } %>
        </div>
        
	</div>
    
    <div class='col-md-12 well well-sm'>
      <%= f.input :description, as: :text , label: false, wrapper_html: {class: "col-md-8"}, placeholder: "Job Duties / Responsiblities", input_html: {data: { behavior: "autocomplete_work_history" }, rows: 10 } %>
    <%= f.input :tag_list, as: :text, value: @work_history.tag_list.to_s, wrapper_html: { class: 'col-md-4' }, label: "List skills for this position. (seperated by commas)"  %>
    
    
        <div class='form-inline'>
    	    <%= f.input :pay, label: false, placeholder: "Pay Rate", wrapper_html: {class: "form-inline"} %>
    	    <%= f.input :pay_period, as: :select,	collection: [ "/hour", "/week", "/year"], include_blank: false, label: false, wrapper_html: {class: "form-inline"} %>
    	  </div>
    </div>
    
   
    
     
    
 

  <div class="form-actions">
    <%= f.button :submit, "Save", class: 'btn btn-success btn-lg' %>
  </div>
<% end %>
