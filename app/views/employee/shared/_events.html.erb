<h3><%= @employee.first_name %>'s Events</h3>

<% Event.employee_events(@employee.id).each do |event| %>
  <div>
    <strong> <%= event.eventable.name %> was <%= event.action.humanize.downcase %> by <%= event.admin.name %></strong> - <small><%= event.admin.role %></small>
    <small><%= time_ago_in_words(event.created_at) %></small>
</div>
<% end %>