<%= simple_form_for [:employee, Skill.new], :remote => true do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :name, label: false,  placeholder: "Type # for suggestions", input_html: {id: "autocomplete"} %>
    <% if skillable.class.to_s == "Order" %>
       <%= f.input :required, label: 'Is this a requirement?' %>
    <% end %>
   
    

  <%= f.hidden_field :skillable_id, :value => skillable.id %>
    <%= f.hidden_field :skillable_type, :value => skillable.class %>

 
    <%= f.button :submit %>
 
<% end %>
