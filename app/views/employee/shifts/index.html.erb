<div class='col-md-12 mainpage shadow'>
<h1 class="text-center bold">Shifts this week</h1>
<div class="well">
  <table id="shifts" class="table">
  <thead>
    <tr>
      <th>Work Date</th>
      <th>Time In</th>
      <th>Time Out</th>
      <th>Employee</th>
      <th>Hours</th>
      <th>Pay Rate</th>
      <th></th>
      <th></th>

    </tr>
  </thead>
  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.week.stamp("Mon 3/12")%></td>
        <td><%= shift.time_in.strftime("%I:%M %p") %></td>
        <td><%= shift.clocked_out? ? shift.time_out.strftime("%I:%M %p") : "Clocked In" %></td>
        <td><%= shift.job.title_company %></td>
        <td><%= shift.time_worked %></td>
        <td><%= number_to_currency(shift.pay_rate) %></td>
        <td><%= link_to "<span class='glyphicon glyphicon-info-sign' aria-hidden='true'></span>     View".html_safe, employee_shift_path(shift), class: "btn btn-default btn-sm" %></td>
        <td><%= link_to "<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>".html_safe, edit_employee_shift_path(shift) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<hr>
<h3> Shift Calendar</h3>
<hr>
<%= render "employee/shifts/calendar", shifts: @shifts %>

</div>
