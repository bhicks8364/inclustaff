<div class='col-md-12 main-box'>
   <h1> Employee Dashboard</h1>
 <% if @user.last_sign_in_at.present? %>
    <h2> Welcome back, <%= @user.first_name %>!</h2>
<% else %>
<h2> Welcome, <%= @employee.first_name %>!</h2>
<% end %>
        <div class='well'>
          <h4>All Open Positions</h4>
        
        <%= render 'employee/orders/open_table' %>
        </div>

    </div>

    <% if @employee.assigned? %>
      
      <div class='well'>
        <%= render 'employee/jobs/job', job: @employee.current_job %>
      </div>
      <div class='main-box'>
        <%= render 'employee/timesheets/table' %>
      </div>
      <div class='main-box'>
        <%= render 'employee/shifts/table' %>
      </div>
      
      <div class='main-box'>
        <%= render 'employee/jobs/job', job: @employee.current_job %>
      </div>
    
    <% else %>
    
      
    
    
    
    <% end %>
 
</div>