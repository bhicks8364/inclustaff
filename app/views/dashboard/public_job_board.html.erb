<div class='col-md-12'>
    <h1 class='metal bold page-header'><%= @current_agency.try(:name) %> <small> Current Positions</small></h1>
    
    <div class='well'>
    <%= search_form_for @q, class: 'form-inline', url: public_job_board_path  do |f| %>
  <%= f.search_field :notes_or_title_or_company_name_cont , class: 'form-control', placeholder: "Search Job Orders"%>
  <%= f.submit %>
<% end %>

        <div class='table-responsive'>
            <table class='table table-hover'>
                <thead>
                    <tr>
                    <th>Posting Date</th>
                    <th>Job Title</th>
                    <th>Location</th>
                    <th>Pay</th>
                </tr>
                </thead>
                <tbody>
                    <% @orders.each do |order| %>
                    <tr>
                        <td><%= order.published_at.stamp("11-12-2015") %> </td>
                        <td><%= link_to order.title, public_job_path(order) %></td>
                        <td><%= order.location %></td>
                        <td><%= pay_range(order) %></td>
                        
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <%= will_paginate(@orders) %>
        </div>
    </div>
    
    
    
</div>