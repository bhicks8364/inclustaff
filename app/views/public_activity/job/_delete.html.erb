<% if activity.trackable %>
<%= link_to admin_job_path(activity.trackable_id), class: 'list-group-item list-group-item-success' do %>
	<%= activity.owner.try(:name) %><strong> deleted </strong>   to  <%= activity.trackable.name_title %>
		<span class='label label-success pull-right'>
		    <%= date_and_time activity.created_at %>
		</span>
<% end %>
<% else %>
RECORD DELETED
<% end %>