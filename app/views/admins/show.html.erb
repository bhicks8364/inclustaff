<div class='col-md-12'>

  <div class="row">
	<div class="col-lg-12">
			<div class="main-box clearfix">
				
				<div class="tabs-wrapper">
					<div class="clearfix">
						<h4 class="pull-left"><%= @admin.first_name %>'s Activity</h4>
						<ul class="nav nav-tabs pull-right">
							<li class="active"><a href="#tab-users" data-toggle="tab">Candidates</a></li>
							<li class=""><a href="#tab-placements" data-toggle="tab">Placements</a></li>
							<li class=""><a href="#tab-events" data-toggle="tab">Events</a></li>
						</ul>
					</div>
					
					<div class="tab-content">
						<div class="tab-pane fade active in" id="tab-users">
							
								<% @employees.each do |employee| %>
								<%= link_to employee.name_title, admin_employee_path(employee) %><br>
								
								
							
							
							<% end %>
						
							
							<br>
							<%= link_to "View all jobs", admin_jobs_path, class: 'btn btn-success pull-right' %>
						</div>
						
						<div class="tab-pane fade" id="tab-placements">
							 <h4>Company Placements</h4>
							<% if @jobs %>
							
							<% @jobs.each do |job| %>
									
								<div class='list-item'>
								<span class'text-right'><strong><%= job.current_timesheet.week_ending %></strong></span>
							<%= job.name_title %> - <%= number_to_currency(job.current_timesheet.total_bill) %>
							<br><small><%= job.staff %></small>
							
							</div>
								
							<% end %>
							<% else %>
							No jobs available.
							<% end %>
							
					
							
							<br>
							<%= link_to "View Jobs", admin_jobs_path, class: 'btn btn-success pull-right' %> &nbsp;
							<%= link_to "View Timesheets", admin_timesheets_path, class: 'btn btn-success pull-right' %>
						</div>
						
						<div class="tab-pane fade" id="tab-events">
							<% if @events %>
							<% @events.each do |event| %>
							  <% if lookup_context.template_exists?(event.action, "events/activities", true) %>
							    <%= render partial: "events/activities/#{event.action}", locals: {event: event} %>
							  <% end %>
							<% end %>
							<% else %>
							Sorry, there're are currently no events.
							<% end %>
						</div>
						
					</div>
				</div>
			</div>
		</div>
			
	</div>
	<%= render 'admins/infoboxes' %>
	<div class="row">
		<div class="col-lg-6">
			<div class="main-box clearfix">
				<h2>Timesheets</h2>
				<strong><%= @admin.first_name %>'s billing for this week:
				<%= number_to_currency(@admin.billing) if @admin.billing.present? %></strong>
				
				
				<div class="conversation-wrapper" data-behavior="timesheet-list">
				
							
			<% if @admin.recruiter? && @admin.recruiter_jobs.any? %>
			
                <% @recruiter_jobs.each do |job| %>
               
                 <%= render job %>
               
                 
              
                  
                <% end %>
              
              <% end %>

					</div>
				</div> 
				
			</div>
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
  </div>
</div>



