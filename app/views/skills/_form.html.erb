<%= simple_form_for [@skill], :remote => true do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, as: :string, autofocus: true, input_html: {data: { behavior: "autocomplete_skills" }} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
