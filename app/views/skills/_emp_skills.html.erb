

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Skill</th>
      <th>Employee</th>
      <th>Type</th>
      <th>Required</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @emp_skills.each do |skill| %>
      <tr>
        <td><%= link_to skill.name, skill %></td>
        <td><%= skill.skillable.try(:name) || skill.skillable.try(:title) %></td>
        <td><%= skill.skillable.try(:name_title) %></td>
        <td><%= skill.required %></td>
        
        <td><%= link_to "<i class='fa fa-pencil'></i>".html_safe, edit_skill_path(skill) %></td>
        <td><%= link_to "<i class='fa fa-trash-o red'></i>".html_safe, skill, class: "", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
