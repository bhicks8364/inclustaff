

<h1><strong><%= @company.name %>'s </strong> Orders</h1>

<table id="orders" class="display" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Created</th>
      <th>Pay range</th>
      <th>Title</th>
      <th>Notes</th>
      <th>Number needed</th>
      <th>Needed by</th>
      <th>Urgent</th>
      <th>Active</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime("%B %e, %Y ") %></td>
        <td><%= order.pay_range %></td>
        <td><%= order.title %></td>
        <td><%= order.notes %></td>
        <td><%= order.number_needed %></td>
        <td><%= order.needed_by.strftime("%B %e, %Y ") %></td>
        <td><%= order.urgent %></td>
        <td><%= order.active %></td>
        <td><%= link_to "<span class='glyphicon glyphicon-eye-open' aria-hidden='true'></span>".html_safe, company_order_path(@company, order), class: "btn btn-default" %></td>
        <td><%= link_to "<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>".html_safe, edit_company_order_path(@company, order), class: "btn btn-default" %></td>
        <td><%= link_to "<span class='glyphicon glyphicon-trash' aria-hidden='true'></span>".html_safe, company_order_path(@company, order), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_company_order_path(@company) %>
