<div class='col-md-12 transbox'>
    <h3>New Message <small> Job Order</small></h3>
    <%= simple_form_for [Comment.new], class: 'form', do |f| %>
<%= f.input :commentable_id, collection: Order.includes(:company).needs_attention.order('companies.name'), label_method: :title_company, value_method: :id, label: false, include_blank: false%>
    <%= f.hidden_field :commentable_type, value: "Order" %>
    <%= f.hidden_field :admin_id, value: current_admin.id %>
  
    <%= f.input :recipient_id, collection: Admin.order(:role), label_method: :name_role, value_method: :id, include_blank: false, label: "Send to:" %>
    
 
    <div class="form-group">
      <%= f.input :body, label: false, input_html: {class: "form-control", rows: 8}, placeholder: "Add a comment" %>
      
         <%= f.submit "Send", class: "btn btn-primary btn-block" %>
     
    </div>
  
    
  
  
<% end %>
</div>