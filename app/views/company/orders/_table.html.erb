<div class="table-responsive">
  <table class="table table-bordered" >
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Pay Range</th>
        <th>Open </th>
        <th>Urgent</th>
        <th>Needed by</th>
        <th></th>
      </tr>
    </thead>
  
    <tbody>
      <% orders.each do |order| %>
        <tr>
          <td class='text-center'><%= status_tag(order) %>
          </td>
          <td><%= link_to order.title, company_order_path(order) %></td>
          <td><%= pay_range(order) %></td>
          <td><%= order.open_jobs %></td>
          <td><%= order.urgent %></td>
          <td><%= order.needed_by.stamp("Monday 11/2") %></td>
          <td class='text-center'>
            <%= link_to "<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>".html_safe, edit_company_order_path(order), class: "button" %>
         <%= link_to "<span class='glyphicon glyphicon-trash' aria-hidden='true'></span>".html_safe, 
          company_order_path(order), method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>