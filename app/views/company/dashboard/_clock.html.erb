<div class='btn-group'>
    <div class='clock-actions-<%=job.id%>'> 
    <p class=' text-danger' id='unauthorized'></p>
    <% if job.on_shift? %>
      <button type='button' data-behavior="job-out-button_<%= job.id %>" class='btn btn-danger'>  <i class='fa fa-sign-out'></i> Clock Out </button>
      <% elsif job.off_shift? %>
      
      <button class='btn btn-info black' data-behavior="code-button_<%= job.id %>">Enter Code</button>
      <button type='button' data-behavior="job-in-button_<%= job.id %>" class='hide-this btn btn-success'><i class='fa fa-sign-in'></i> Clock In </button>
      <% end %>
    </div> 
    <div class='break-actions-<%=job.id%>'>
       <% if job.on_break? %>
        <%= link_to stop_company_shift_breaks_path(job.current_shift), class: "btn btn-danger", remote: true, method: :patch do %> <i class='fa fa-history'></i> End Break <% end %>
        <% elsif job.on_shift? %>
        <%= link_to start_company_shift_breaks_path(job.current_shift), class: "btn btn-info",  remote: true, method: :post do %>  <i class='fa fa-history'></i> Start Break <% end %>
        <% end %>
    </div>
</div>