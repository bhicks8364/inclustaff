<div class='col-md-12'>
  <h2 class='page-header white'> Welcome, <%= current_company_admin.name %>!</h2>
  	<div class='col-md-6'>
  	  <h1 class='page-header'><%= @company.name %></h1>
      <% Calendar.new events: @company.shifts do |date, shifts| %>
    <%= date %>
  
    <% shifts.each do |shift| %>
      <div>
        <%= shift.name %>
      </div>
    <% end %>
  <% end %>
    </div>
  <div class='col-md-3'>
    <%= render 'company/shifts/one_day_calendar', shifts: @shifts if @shifts.present? %>
  </div>
  <div class='col-md-6 text-center'>
      <%= link_to "<i class='fa fa-plus-square'></i> New Job Order".html_safe, new_company_order_path, class: "btn btn-primary btn-lg" %>
      <%= link_to "<i class='fa fa-clock-o'></i> Timeclock".html_safe, company_timeclock_path, class: "btn btn-primary btn-lg" %>
   
  </div>
  <div class='col-md-3'>
  <% if @company.invoices.unpaid.any?  %>
    <div class="alert alert-danger" role="alert">
      <h2 class='metal'>  <%= pluralize( @current_company_admin.company.invoices.unpaid.count, 'unpaid invoice') %></h2>
    </div>
    <%= render partial: "company/invoices/invoice", collection: @company.invoices.unpaid %>
  <% else %>
    <div class="alert alert-success" role="alert">
      <h2 class='metal'>  <%= pluralize( @current_company_admin.company.invoices.unpaid.count, 'unpaid invoice') %></h2>
    </div>
  <% end %>
  </div>
</div>