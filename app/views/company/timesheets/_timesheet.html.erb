
<div class="lightbox timesheet" data-behavior="timesheet" data-id="<%= timesheet.id %>">
  	<span data-behavior='timesheet-state'>
		  <%= timesheet.state.titleize %>
		</span>
	<div class="conversation-user">
		<% if timesheet.approved? %>
		
		<h4 class='text-left'>
			<%= timesheet.employee.name %>
			<span class='label label-success black pull-right'>
				<i class="fa fa-calendar-check-o fa-1x"></i>
				<%= timesheet.state.upcase %>
			</span>
		</h4>
		<% else %>
		<h4 class='text-left'>
			<%= timesheet.employee.name %> <%=timesheet.job.title %>
			<span class='label label-danger black pull-right'>
			<i class="fa fa-calendar-times-o fa-1x"></i>
			<%= timesheet.state.upcase %>
			</span>
		</h4>
		<% end %>
	</div>
	<div class="conversation-body blue-wave">

		<div class="col-md-4 col-sm-6 col-xs-6">
			
		<%= link_to(company_timesheet_path(timesheet), class: 'b') do %>
		<i class="fa fa-calendar-times-o fa-1x"></i>
		<%= timesheet.week_begin %>  -  <%= timesheet.week_ending %>
		
	
		<% end %>
		
				<h5> <%= timesheet.company.name %> </h5>
		</div>
		<div class=" col-md-4 col-sm-4">
			<span class='text-center'>
				<strong>	Regular Hours:	<%= timesheet.reg_hours.round(2) %></strong>
        <br>
					<strong>	Overtime Hours:	<%= timesheet.ot_hours.round(2) %></strong>
			</span>
		</div>
		<div class="col-md-4">
			<span class='text-center'>
				<strong>	Gross Pay:	<%= number_to_currency(timesheet.gross_pay) %></strong>
        <br>
					<strong>	Total Bill:	<%= number_to_currency(timesheet.total_bill) %></strong>
			</span>
		</div>
		
		
		
			<div id='timesheet-tools' class="btn-toolbar" role="toolbar" aria-label="">
				<div class='btn-group' role='group'>
					
					<%= link_to(company_timesheet_path(timesheet), data: {toggle: "tooltip", placement: "top", title: "View Timesheet"}, class: "" ) do %>
					<span class="fa-stack fa-lg">
					  <i class="fa fa-square-o fa-stack-2x"></i>
					  <i class="fa fa-clock-o fa-stack-1x"></i>
					</span>
				
					<% end %>
			
			<%= link_to(company_job_path(timesheet.job), data: {toggle: "tooltip", placement: "top", title: "View Job"}, class: "" ) do %>
				<span class="fa-stack fa-lg">
					  <i class="fa fa-square-o fa-stack-2x"></i>
					  <i class="fa fa-briefcase fa-stack-1x"></i>
					</span>
			<% end %>

			<%= link_to(company_timesheet_path(timesheet), method: :delete, data: {toggle: "tooltip", placement: "top", title: "Delete Timesheet", confirm: 'Are you sure?' }) do %>
					<span class="fa-stack fa-lg">
					  <i class="fa fa-square-o fa-stack-2x"></i>
					  <i class="fa fa-trash fa-stack-1x"></i>
					</span>

			<% end %>
		<a class='' data-behavior="company-timesheet-toggle" data-toggle="tooltip" data-placement="left" title="Approve">
			<span class="fa-stack fa-lg" data-behavior="approve-button">
		          <% if timesheet.approved? %>
    					  <i class="fa fa-square-o fa-stack-2x"></i>
    					  <i class="fa fa-times fa-stack-1x"></i>
		          <% else %>
		          	<i class="fa fa-square-o fa-stack-2x"></i>
			          <i class="fa fa-check fa-stack-1x"></i>
		          <% end %>
		    </span>
		</a>
		<%= link_to(company_timesheet_path(timesheet, format: :pdf)) do %>
					<span class="fa-stack fa-lg">
					  <i class="fa fa-square-o fa-stack-2x"></i>
					  <i class="fa fa-download fa-stack-1x"></i>
					</span>
					
				
				<% end %>
				</div>
				
				
			</div>
			
				<p class='text-right' data-behavior='user-approved'>
					<small> Approved by: <%= timesheet.user_approved %></small>
				</p>
				
		</div>
			
</div>
	
