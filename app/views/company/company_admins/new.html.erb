<div class='lightbox'>
  <div class="col-md-12">
      <div class="col-md-3"></div>
    	<div class="col-md-6">
    	  <h2>New Company Admin </h2>
        <div class='well center'>

          <%= simple_form_for([:company, @company_admin], class: 'form-group') do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :first_name, required: true, placeholder: "First Name", label: false, autofocus: true %>
              <%= f.input :last_name, required: true, placeholder: "Last Name", label: false %>
              <%= f.input :email, required: true, placeholder: "Email", label: false %>
              <%= f.hidden_field :company_id, :value => @current_company_admin.company_id %>
              <%= f.input :role, required: true, collection: [ "Owner", "Manager", "HR", "Limited Access", "Timeclock"], include_blank: false, label: false  %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Add Admin" %>
            </div>
          <% end %>

        </div>
    </div>
  </div>
</div>
