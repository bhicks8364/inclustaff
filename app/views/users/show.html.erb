  </div>
  
  <div role="tabpanel" class="tab-pane fade" id="current-job">
    <h3><%= @user.name %>'s Current Job</h3>
  
    <%= render 'jobs/job' %>
      
     
                
        

            
  </div>

      
      

        
            
            


    

