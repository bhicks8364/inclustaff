<%= div_for event do %>
	<i class="fa fa-times fa-fw"></i>
	<% if @admin.nil? && @candidates.nil?  %>
	<%= event.admin.try(:first_name) %>
	<%= event.company_admin.try(:first_name)  %>
    <strong>	<%= event.action.humanize.downcase %></strong> placing
    <% end %>
	<%=  signed_in_link_to event.eventable.employee.name, event.eventable %> <small> at <%= event.eventable.company.name %></small>
    
		<span class='label label-warning black pull-right'>
		    <%= event.created_at.stamp('11/13') %>
		</span>

<% end %>