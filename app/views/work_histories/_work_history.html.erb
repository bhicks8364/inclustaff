<%= div_for work_history do %>
        <% if work_history.current? %>
            <p class='text-warning' data-toggle="tooltip" data-placement="top" title="Current Employer"><i class="fa fa-asterisk"></i> Current Employer</p>
        <% end %>
            <p class='big'><%= work_history.employer_name %> </p>
            <p class='metal bold text-info'> <%= work_history.title %></p>
            <strong><%= work_history.start_date.stamp("December 2013") %> - <%= work_history.end_date.stamp("December 2013") %></strong>
             
            <p class='bold'><%= number_to_currency(work_history.pay) %></p>
            <p class='metal'><%= truncate(work_history.description, length: 130) { link_to "More", admin_employee_work_history_path(work_history.employee, work_history) }%>
            </p>
            
<% end %>