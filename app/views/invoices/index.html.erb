<div class='col-md-12 '>
<div class=''>
<div class='table-responsive dataTable'>
<h1><%= @current_agency.name %>'s Invoices</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Week</th>
      <th>Due by</th>
      <th>Paid</th>
      <th>Total</th>
      <th>Amt paid</th>
      <th>Paid on</th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.order(week: :desc).each do |invoice| %>
    
    
      <tr>
        <td><%=inv_sym(invoice)%> <%= link_to invoice.week_ending, admin_invoice_path(invoice) %></td>
        <td><%= invoice.due_by.stamp('11/13') %></td>
        <td><%= invoice.state %></td>
        <td><%= number_to_currency(invoice.total) %></td>
        <td><%= number_to_currency(invoice.amt_paid) %></td>
        <td><%= invoice.paid_on %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<%= link_to 'View All Invoices', admin_invoices_path, class: "btn btn-primary" %>
</div>
</div>

