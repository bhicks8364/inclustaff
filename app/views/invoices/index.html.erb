<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th>Company</th>
      <th>Agency</th>
      <th>Week</th>
      <th>Timesheets</th>
      <th>Due by</th>
      <th>Status</th>
      <th>Total</th>
      <th>Amt paid</th>
      <th>Date paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.company.name %></td>
        <td><%= invoice.agency.name %></td>
        <td><%= invoice.week %></td>
        <td><%= invoice.timesheets.count %></td>
        <td><%= invoice.due_by.stamp('12/18/2015') %></td>
        <td><%= invoice.paid? ? "Paid" : "Open" %></td>
        <td><%= number_to_currency(invoice.total) %></td>
        <td><%= invoice.amt_paid %></td>
        <td><%= invoice.paid_on %></td>
        <td><%= link_to 'Show', admin_invoice_path(invoice) %></td>
        <td><%= link_to 'Edit', edit_admin_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', admin_invoice_path(invoice), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

