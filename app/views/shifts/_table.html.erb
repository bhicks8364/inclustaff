<table id="shifts" class="table">
  <thead>
    <tr>
      <th></th>
      <th>Work Date</th>
      <th>Employee</th>
      <th>Time In</th>
      <th>Time Out</th>
      <th>Hours</th>
      <th>Pay Rate</th>
      <th>Earnings</th>
      <th>In/Out IP</th>
      
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <% if shift.clocked_in? %>
        <tr class="clocked_in">
      <% else %>
        <tr class="clocked_out">
      <% end %>
        <td><%= link_to "<span class='glyphicon glyphicon-info-sign' aria-hidden='true'></span>     View".html_safe, shift, class: "table-link" %></td>
        
        <td><%= shift.time_in.strftime("%x") %></td>
        <td><%= link_to shift.employee.name, shift.employee %></td>
        <td><%= shift.time_in.strftime("%I:%M %p") %></td>
        
        <td><%= shift.clocked_out? ? shift.time_out.strftime("%I:%M %p") : "Clocked In" %></td>
        
        <td><%= shift.time_worked %></td>
        <td><%= number_to_currency(shift.pay_rate) %></td>
        <td><%= number_to_currency(shift.earnings) %></td>
        <td><small> <%= shift.in_ip %> <br> <% if shift.clocked_out? %><%= shift.out_ip %><% else %> <%= shift.out_ip.nil? ?  shift.state.titleize : shift.out_ip %><% end %> </small> </td>
        

      </tr>
    <% end %>
  </tbody>
</table>
