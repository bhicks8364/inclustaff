
<h3 class="page-header">
  <strong> <%= @employee.name %>  <small> <%= @job.title %></small></strong>
</h3>
  

  <span id="shift-state"><%= @shift.state.titleize %></span>
  <strong>Time in:</strong>
  <%= @shift.time_in.strftime("%I:%M %p") %>
  


<% if @shift.clocked_in? %>

  <%= link_to 'Clock Out', clock_out_job_shift_path(@job, @shift), method: :patch, 
                          remote: true, id: "out-button", class: "btn btn-primary btn-lg", data: { disable_with: "Clocking Out..."} %>





<% end %>
<strong><h3><%= @shift.state.titleize %></h3></strong>
<p>
  <strong>Time in:</strong>
  <%= @shift.time_in.strftime("%I:%M %p") %></p>
  
 <strong>Time out:</strong><span id="time-out">   <%= @shift.time_out.strftime("%I:%M %p") %>  </span><br>
 <strong>Time worked:</strong>  <span id="time-worked"> <%= @shift.time_worked %></span><br>
  
  <%= distance_of_time_in_words(@shift.time_in, @shift.time_out, include_seconds: true) %>

  



