<div class='white'>
  <%= timesheets_for(@invoice) %>
  <h4 id='example'><%= @invoice.week_ending %></h4>

  <span id='balance'>
   <h4><strong>Balance:</strong> <%= number_to_currency(@invoice.balance) %></h4>
</span>
 
<h3>
  <strong>Company:</strong>
  <%= link_to @invoice.company.name, admin_company_path(@invoice.company) %>
  
</h3>
<%= link_to "All Company Invoices", admin_company_invoices_path(@invoice.company), class: 'btn btn-primary' %>
<p>
  <strong>Agency:</strong>
  <%= @invoice.agency.name%>
</p>
<p>
  <strong>Week:</strong>
  <%= @invoice.week %>
</p>

<p>
  <strong>Due by:</strong>
  <%= @invoice.due_by.stamp('12/18/2015') %>
</p>

<p id='status'>
  <strong>Status:</strong>
  <%= @invoice.paid? ? "Paid" : "Open" %>
</p>

<p>
  <strong>Total:</strong>
  <%= number_to_currency(@invoice.total) %>
</p>

<p>
  <strong>Amt paid:</strong>
  <%= number_to_currency(@invoice.amt_paid) %>
</p>

<p>
  <strong>Date paid:</strong>
  <%= @invoice.date_paid %>
</p>

<div class='list-group'>
  <% @invoice.timesheets.each do |timesheet| %>
  <%= link_to admin_timesheet_path(timesheet) do %>
  
     <li class='list-group-item'><%= timesheet_user(timesheet) %> <%= timesheet.week_ending %> - <%= timesheet.employee_bill %> - <small><%= timesheet.state %></small></li>
    <% end %>
<% end %>
</div>
<% if @invoice.unpaid? %>
<%= link_to 'Mark As Paid', mark_as_paid_admin_invoice_path(@invoice), method: :patch, remote: true, id: 'pay-button', class: 'btn btn-primary' %>
<% end %>
<%= link_to 'Edit', edit_admin_company_invoice_path(@company, @invoice) %> |
<%= link_to 'Back', admin_company_invoices_path(@company) %>

</div>