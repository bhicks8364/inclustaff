<header class="navbar" id="header-navbar">
	<div class="container">
		<% if @current_agency.present? %>
		<%= link_to root_url, id: "logo", class: "navbar-brand col-md-3 col-sm-3 col-xs-12" do %>
			<%= @current_agency.name.titleize %>	
			<% end %>
		<% else %>
			<%= link_to root_url, id: "logo", class: "" do %>
			       <%= image_tag("incluStaff_logo.png", alt: "Inclustaff") %>
			 <% end %>
		<% end %>
		<button class="navbar-toggle" data-target=".navbar-ex1-collapse" data-toggle="collapse" type="button">
			<span class="sr-only">Toggle navigation</span>
			<span class="fa fa-bars"></span>
		</button>
		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	       <ul class="nav navbar-nav navbar-right">
	       	<% if @current.present? && @at_work.any? %>
					<%= render 'admin/shared/clocked_in' %>
					<% end %>
					
				<% if @current_agency.present?  && @newly_added.any?  %>
					<%= render 'admin/shared/newly_added' %>
				<% end %>
	      	 <p class="navbar-text"><%=@current_admin.name %></p>
	      	 
	        	
				<li><%= link_to destroy_admin_session_path, method: :delete do %>
						<i class='fa fa-power-off'></i>
					<% end %>
				</li>
	      </ul>
		
      
    </div><!-- /.navbar-collapse -->
		
	
	</div>
</header>
