<li id='clocked-in-nav' class="dropdown hidden-xs">
	<a class="btn nav-btn dropdown-toggle" data-toggle="dropdown">

  		<i class="fa fa-clock-o"></i> Clocked In
		<span class="count" id="clocked-in-count">
			<%= Job.on_shift.try(:count) %>
		</span>
	</a>
	<ul class="dropdown-menu dropdown-menu-left">
		<li class="pointer">
			<div class="pointer-inner">
				<div class="arrow"></div>
				<div class="arrow-border"></div>
			</div>
		</li>
		<li id='clocked-in-count' class="item-header dark">
			You have <%= pluralize(Job.on_shift.try(:count), 'employee') %> clocked in.
		</li>
			<% Job.on_shift.order(updated_at: :desc).each do |job| %>
		<li id='in-job-<%= job.id %>'class="list-item" >
			
			<%= link_to job.name_title, admin_job_path(job) %>
			
			
		</li>
		<% end %>
		
		
		<li class="item-footer">
			<%= link_to "View all timesheets", admin_timesheets_path %>
		</li>
	</ul>
</li>
