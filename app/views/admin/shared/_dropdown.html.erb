<li id='comments-nav' class="dropdown hidden-xs">
	<a class="btn nav-btn dropdown-toggle" data-toggle="dropdown">

  		<i class="fa fa-envelope"></i> Messages
		<span class="count" data-behavior='comments-count'>
			<%=  @current_admin.comments.unread.count %>
		</span>
	</a>
	<ul class="dropdown-menu dropdown-menu-left" data-behavior='comment-list'>
		<li class="pointer">
			<div class="pointer-inner">
				<div class="arrow"></div>
				<div class="arrow-border"></div>
			</div>
		</li>
		<li id='comments-count' class="item-header dark">
			You have <%= pluralize( @current_admin.comments.unread.count, 'comments') %>.
		</li>
			<%  @current_admin.comments.unread.order(updated_at: :desc).each do |comment| %>
		<li id='comment-<%= comment.id %>'class="list-item" >
			
			<%= link_to comment do %>
				<%= render 'comments/comment', comment: comment %>
				 
			<% end %>
			
			
		</li>
		<% end %>
		
		
		<li class="item-footer">
			<%= link_to "View all comments", comments_path %>
		</li>
	</ul>
</li>
