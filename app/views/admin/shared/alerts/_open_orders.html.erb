<% if orders.overdue.any? %>
	<div class="alert alert-danger fade in text-center">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
		<i class="fa fa-exclamation-triangle fa-fw fa-lg"></i>
			<strong><%= pluralize(orders.overdue.count, 'overdue job order') %> </strong>   
	</div>
<% else %>
	<div class="alert alert-success fade in">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
		<i class="fa fa-check-square-o fa-fw fa-lg"></i>
			<h4><%= pluralize(orders.overdue.count, 'overdue job order') %>. </h4>
	</div>
<% end %>

