<div class="col-md-12">
	<div class='col-md-6'>
	<div style='width: 400px;'>
	  <div id="map" style='width: 400px; height: 400px;'></div>
	</div>
	</div>
	<div class="col-md-6">
		<h2 class='white text-center'>	<%= @employees.assigned.count %> Active Employees</h2>
			<div class="table-responsive">
				<table id='' class="table table-bordered ">
					<thead>
						<tr>
							<th>Employee</th>
							<th>Title</th>
							<th>Week Gross</th>
							<th>YTD Gross</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<%  @employees.assigned.each do |employee| %>
						<% if employee.on_shift? %>
							    <tr class="bg-success">
							 	<% else %>
							  	<tr class="bg-info">
				        <% end %>
							<td>
								<%= employee.work_histories.count %>
								<%= link_to "<i class='fa fa-user fa-lg fa-fw'></i> #{employee.name}".html_safe, admin_employee_path(employee), class: "" %>
					</td>
							<td><%= employee.title %></td>
							
							<td><%= number_to_currency(employee.current_timesheet.try(:gross_pay) || 0) %> </td>
							<td><%= number_to_currency(employee.current_job.try(:total_gross_pay) || 0) %> </td>
							<td><%= employee.deleted_at %></td>
							</tr>
						<% end %>
						
					</tbody>
				</table>
			</div>
	</div>
		<div class="col-md-4 ">
			<h2 class='text-center'>	<%= @employees.only_deleted.count %> Deleted Employees</h2>
			<% @employees.only_deleted.each do |employee| %>
			<%= employee.name %> - <%= link_to "<i class='fa fa-trash'></i>".html_safe, admin_employee_path(employee), method: :destroy %><br>
			<% end %>
		</div>
<%= form_for @import, url: import_admin_employees_path, multipart: true do |f| %>
		  <%= f.file_field :file %>
		  <%= f.submit "Upload", class: 'btn btn-success' %>
		<% end %>
<%= link_to(admin_employees_path(@employees, format: :csv), class: 'btn btn-primary') do %>
  		<i class="fa fa-file-excel-o fa-lg"></i> Export Employee List
<% end %>
	<%= link_to "<i class='fa fa-user-plus fa-lg fa-fw pull-left'></i> Employee Registration".html_safe, new_user_registration_path, class: 'btn btn-primary btn-lg' %>
</div>


<script type='text/javascript'>
handler = Gmaps.build('Google');
handler.buildMap({
    provider: {
      disableDefaultUI: true
     
      // pass in other Google Maps API options here
    },
    internal: {
      id: 'map'
    }
  },
  function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  }
);

</script>


