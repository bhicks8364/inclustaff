<div class='col-md-12 lightbox'>
    
    <h1>ACA Reporting</h1>
    <div class='col-md-4 bg-white'></div>
    <div class='col-md-4 bg-white'>
    <% @employees.worked_this_year.distinct.sorted_by_total_hours.each do |employee| %>
        
        <%= link_to employee.name, admin_employee_path(employee) %>  - <%= employee.total_hours.round(2) %> (Average: <%= employee.average_weekly_hours %>)
        <%= link_to aca_admin_employee_path(employee), class: "aca-link" do %>
            <i class='fa fa-folder-open'></i>
        <% end %>
        <% employee.current_report.each do |k, v| %>
             <li class='list-group-item list-group-item-info'><strong><%=  k.stamp("2015") %> </strong> -  Total Hours: <%= v.round(2) %>
             </li>
             <%= aca_progress(v, 1560) %>
             <% end %>
             
             <br>
    
    <% end %>
    </div>
    <div class='col-md-4 bg-white'></div>
</div>