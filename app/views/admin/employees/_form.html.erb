<%= simple_form_for([:admin, @employee], defaults: { input_html: { class: 'form-control' }, wrapper_html: { class: '' } }) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-4 well">
    <h3 class="text-center"><strong>Employee Information</strong></h3>
    <%= f.input :first_name, label: "First Name", autofocus: true, placeholder: "First Name" %>
    <%= f.input :last_name, label: "Last Name", placeholder: "Last Name" %>
    <%= f.input :phone_number, as: :tel, placeholder: "Phone Number", label: "Phone Number"  %>
    <%= f.input :ssn, maxlength: 4, placeholder: "SSN - Last 4 only", label: "SSN" %>

    
  </div>
 
 
    <div class="col-md-4 well">
      <h3 class="text-center"><strong>Availablility</strong></h3>
      <%= f.simple_fields_for :availablity do |d| %>

      <%= d.input :monday, collection: [ "1st shift", "2nd shift", "3rd shift", "Flexible", "Not Available"], label: "Monday", input_html: {class: "form-control"}, wrapper_html: { class: '' } %>
      <%= d.input :tuesday, collection: [ "1st shift", "2nd shift", "3rd shift", "Flexible", "Not Available"],  label: "Tuesday", input_html: {class: "form-control"}, wrapper_html: { class: '' } %>
      <%= d.input :wednesday, collection: [ "1st shift", "2nd shift", "3rd shift", "Flexible", "Not Available"],  label: "Wednesday", input_html: {class: "form-control"}, wrapper_html: { class: '' } %>
      <%= d.input :thursday, collection: [ "1st shift", "2nd shift", "3rd shift", "Flexible", "Not Available"],  label: "Thursday", input_html: {class: "form-control"}, wrapper_html: { class: '' } %>
      <%= d.input :friday, collection: [ "1st shift", "2nd shift", "3rd shift", "Flexible", "Not Available"],  label: "Friday", input_html: {class: "form-control"} , wrapper_html: { class: '' } %>
      <%= d.input :saturday, collection: [ "1st shift", "2nd shift", "3rd shift", "Flexible", "Not Available"],  label: "Saturday", input_html: {class: "form-control"} , wrapper_html: { class: '' } %>
      <%= d.input :sunday, collection: [ "1st shift", "2nd shift", "3rd shift", "Flexible", "Not Available"],  label: "Sunday", input_html: {class: "form-control"}, wrapper_html: { class: '' } %>
      
      <% end %>
   
    </div>
  <div class="col-md-4 well">
    <h3 class="text-center"><strong>Additional Information</strong></h3>
    
    <%= f.input :desired_job_type, label: "Desired Job Type", collection: ["Full-time", "Part-time", "Any"], include_blank: false %>
    <%= f.input :desired_shift, label: "Desired Shift", collection: [ "1st shift", "2nd shift", "3rd shift", "Flexible"], include_blank: false %>
  </div>
  <div class="col-md-4 well">
    <h3 class="text-center"><strong>Admin Use Only</strong></h3>
    <%= f.input :dns, as: :boolean, inline_label: "Mark as DNS", input_html: { class: 'boolean' } %>
  </div>
  
 
 <div class="center">

    <%= f.submit "Save", class: 'btn btn-primary btn-lg btn-block' %>
 </div>
<% end %>
