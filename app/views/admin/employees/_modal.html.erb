<button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#myModal">
  <i class="fa fa-briefcase fa-2x"></i> 
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="#{@employee.name}">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="#{@employee.name}"><%= @employee.name %></h4>
        <div class='pull-center'>
      </div>
      <div class="modal-body">
     <% if @employee.clocked_in?%><i class="fa fa-cog"></i><% end %></span>
        <%= render @job %>
        
        
      
        

      </div>
      <div class="modal-footer">
        
        <div class="btn-toolbar" role="toolbar" aria-label="...">
          <div class="btn-group" role="group" aria-label="..."><button type="button" class="btn btn-default" data-dismiss="modal">Close</button></div>
          <div class="btn-group" role="group" aria-label="...">
            <% if @job.current_timesheet.present? %>
            <%= link_to(admin_timesheet_path(@job.current_timesheet), class: 'btn btn-primary') do %>
      					<i class="fa fa-trash-o fa-lg"></i>
      					View Timesheet
      				<% end %>
      				<% end %>
            <%= link_to(edit_admin_employee_path(@employee), class: 'btn btn-primary') do %>
      					<i class="fa fa-pencil-square fa-lg"></i> 
      					Edit Employee
      				<% end %>
      				<%= link_to(edit_admin_job_path(@job), class: 'btn btn-primary') do %>
      					<i class="fa fa-pencil-square fa-lg"></i> 
      					Edit Job
      				<% end %>
          </div>
          <div class="btn-group" role="group" aria-label="...">
             <%= link_to "<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>".html_safe, edit_admin_job_path(@job), class: "btn btn-primary" %>
          </div>
        </div>
        
  				
      </div>
    </div>
  </div>
</div>
</div>