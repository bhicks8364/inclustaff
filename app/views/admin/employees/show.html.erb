<div class="col-lg-12">
  <h1>Employee Profile</h1>
  <div class="row" id="user-profile">
  	<div class="col-lg-3 col-md-4 col-sm-4">
  		<div class="main-box clearfix">
  			<h2><i class="fa fa-user fa-2x fa-pull-left fa-border"></i><%= @employee.name %></h2>
  			<% if @employee.current_job.present? %>
  			<% if @job.on_shift? %>
  			  <div  class="profile-status">
  				  <i class="fa fa-clock-o"></i> Clocked In
  			  </div>
  			 <% else %>
  			 <div class="profile-status offline">
  				<i class="fa fa-check-circle"></i> Clocked Out
  			</div>
  			<% end %>
  			<div style="max-width: 98%;" class="profile-label">
  			  <%= render "admin/employees/modal" %>
  				
  			</div>
  			
  		<% else %>
  		<span class="profile-status offline">
  				<i class="fa fa-times"></i> Unassigned
  			</span>

  										<div class='alert alert-danger'><%= @employee.first_name %> has no active jobs.</div> 
  		<% end %>
  			
  			
  			
  			<div class="profile-stars">
  				<i class="fa fa-star"></i>
  				<i class="fa fa-star"></i>
  				<i class="fa fa-star"></i>
  				<i class="fa fa-star"></i>
  				<i class="fa fa-star-o"></i>
  				
  			</div>
  			
  			<div class="profile-since">
  				Member since: <%= @employee.created_at.strftime('%b %Y') %>
  			</div>
  			
  			<div class="">
  				<ul class="fa-ul">
  					<li><i class="fa-li fa fa-money green"></i>YTD Gross Pay: <span><%= number_to_currency(@employee.ytd_gross_pay) %></span></li>
  					<li role="separator" class="divider"><hr></li>
  					<li><i class="fa-li fa fa-money"></i>Last Pay: <span><%= @current_timesheet.present? ? number_to_currency(@current_timesheet.gross_pay) : "No pay this week" %></span></li>
  					<li role="separator" class="divider"><hr></li>
  					<li><i class="fa-li fa fa-clock-o"></i><strong> Last in:</strong><br> <%= @job.last_clock_in %></li>
            <li><i class="fa-li fa fa-clock-o"></i><strong> Last out:</strong><br> <%= @job.last_clock_out %></li>

  				</ul>
  			</div>
  			
  			<div class="profile-message-btn center-block text-center">
  			  
  			</div>
  		</div>
  	</div>
  	
  	<div class="col-lg-9 col-md-8 col-sm-8">
  		<div class="main-box clearfix">
  			<div class="profile-header">
  				<h3><span>Employee info</span></h3>
          <%= link_to(edit_admin_employee_path(@employee), class: 'btn btn-primary edit-profile') do %>
  					<i class="fa fa-pencil-square fa-lg"></i> 
  					Edit profile
  				<% end %>
  			</div>
  			
  			<div class="row profile-user-info">
  			  	<% if @employee.user.present? %>
  				<div class="col-sm-8">
  					<div class="profile-user-details clearfix">
  						<div class="profile-user-details-label">
  							First Name
  						</div>
  						<div class="profile-user-details-value">
  							<%= @employee.first_name %>
  						</div>
  					</div>
  					<div class="profile-user-details clearfix">
  						<div class="profile-user-details-label">
  							Last Name
  						</div>
  						<div class="profile-user-details-value">
  							<%= @employee.last_name %>
  						</div>
  					</div>
  					
  				
  					<div class="profile-user-details clearfix">
  						<div class="profile-user-details-label">
  							Address
  						</div>
  						<div class="profile-user-details-value">
  							<%= @employee.user.address %>,<br/> 
  							<%= @employee.user.city %>, <%= @employee.user.state %>, <%= @employee.user.zipcode %>
  						</div>
  					</div>

  					
  					
  					<div class="profile-user-details clearfix">
  						<div class="profile-user-details-label">
  							Email
  						</div>
  						<div class="profile-user-details-value">
  						<%= @employee.email %>
  						</div>
  					</div>
  					<div class="profile-user-details clearfix">
  						<div class="profile-user-details-label">
  							Phone number
  						</div>
  						<div class="profile-user-details-value">
  							<%= @employee.phone_number %>
  						</div>
  					</div>
  					
  				</div>
  				  					<% else %>
  					<div class="alert alert-danger">
  					 <strong> This employee is not assigned a user.</strong>
  					<p> Please create a new user account if necessary.</p></div>
  					<% end %>

  			</div>
  			
  		<div class="tabs-wrapper profile-tabs">
  				<ul class="nav nav-tabs">
  					<li class="active"><a href="#tab-activity" data-toggle="tab"><i class="fa fa-clock-o"></i> Shifts</a></li>
  					<li><a href="#tab-friends" data-toggle="tab">Jobs</a></li>
  					<li><a href="#tab-chat" data-toggle="tab">Chat</a></li>
  				</ul>
  				
  				<div class="tab-content">
  					<div class="tab-pane fade in active" id="tab-activity">
  						
  						<div class="table-responsive">
  							<table class="table table-bordered">
  								<tbody>
  								  <%= content_tag_for(:tr, @employee.shifts) do |shift| %>
                  <% if shift.clocked_out? %>
  										<td class="text-left">
  										  
  										  <%= link_to admin_shift_path(shift), class: "table-link" do %>
  										  <span class="text-left"><p><strong><%= shift.time_out.strftime("%A")%></strong></p></span>
  										  
  											<span class="text-left"><small><%= shift.time_out.strftime("%m/%e")%></small></span>
  										  
  										  <% end %>

  										</td>
  										<td class="text-left">
  											<strong><%= @employee.first_name %> worked <%= shift.time_worked %> hours.<br></strong>
  											<small> Earned: <%= number_to_currency(shift.earnings) %> </small>
  										</td>
  										<td class="text-center">
  											<strong><%= shift.time_in.strftime("%l:%M%P") %>  <strong>-</strong> <%= shift.time_out.strftime(" %l:%M%P") %></strong><br>
  											<span></span><small><%= shift.state.humanize %> <%= time_ago_in_words(shift.time_out) %> ago.</small>
  										</td>
  								<% else %>
  								<td class="text-left">
  										  <%= link_to admin_shift_path(shift), class: "table-link" do %>
  										  <span class="text-left"><p><strong><%= shift.time_in.strftime("%A")%></strong></p></span>
  											<span class="text-left"><small><%= shift.time_in.strftime("%m/%e")%></small></span>
  										  
  										  <% end %>
  										</td>
  										<td class="text-left">
  											<strong><%= @employee.first_name %> has worked <%= shift.hours_worked %> hours so far.<br></strong>
  											<small> Earned: <%= number_to_currency(shift.earnings) %> </small>
  										</td>
  										<td class="text-center">
  											<strong><%= shift.time_in.strftime("%l:%M%P") %> <br>
  											<span></span><small><%= shift.state.humanize %> <%= time_ago_in_words(shift.time_in) %> ago.</small>
  										</td>

  									<% end %>
  										
  									<% end %>
                </tbody>
              </table>
  						</div>
  					</div>
  					
