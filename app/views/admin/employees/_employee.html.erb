<div class=''>
        <h4 class=''><%= link_to employee.name, admin_employee_path(employee) %></h4>
       
        <% if employee.work_histories.any? %>
            <h4> Most Recent Position</h4>
                <%= link_to admin_employee_work_histories_path(employee), class: "button" do %>
               <span class='label label-info black'> <%= employee.work_histories.any? ? employee.work_histories.last.try(:title_pay) : "None" %></span>
                <% end %>
            
        <% end %>
       <span class='label label-danger pull-right'><%= employee.created_at.strftime("%B %e, %Y") %></span>
        <p class='list-group-item-text'> <small><%= employee.try(:email) || "Email Unavailable" %></small></p>
       <%= employee.tags.map {|p| p.name.titleize}.join(", ") %>
</div>