<%= simple_form_for( [:admin, @timesheet]) do |f| %>
  <%= f.error_notification %>
  
  <% if @job.present? %>
    <%= @job.name_title %> 
    
    <% end %>

  <div class="col-md-3 main-box">
    <div class='form-group'>
      
      <%= f.input :week, disabled: true, label: false %> 
      Regular Hours
      <%= f.input :reg_hours, disabled: true, label: false  %>
      <%= f.input :ot_hours, disabled: true, label: false  %>
      <%= f.input :gross_pay, as: :currency, wrapper_html: { class: 'form-control'}, disabled: true, label: false  %>
    </div>

  </div>
  <div class='col-md-9 main-box' id='shifts'>
    <%= f.simple_fields_for :shifts do |shift| %>
      <%= render 'shift_fields', f: shift %>
    <% end %>
    
    
  </div>

  <div class='links'>
      <%= link_to_add_association 'add shift', f, :shifts, class: 'btn' %>
    </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
