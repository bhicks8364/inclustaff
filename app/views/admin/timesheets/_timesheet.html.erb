
<div class="timesheet" data-behavior="timesheet" data-id="<%= timesheet.id %>">
	<div class="conversation-user">
		
		
		<% if timesheet.approved? %>
		<h4 class='text-left' data-behavior='timesheet-state'>
			<%= timesheet.employee.name %>
			<span class='label label-success black pull-right'>
				<i class="fa fa-calendar-check-o fa-1x"></i>
				<%= timesheet.state.upcase %>
			</span>
		</h4>
		<% else %>
		<h4 class='text-left' data-behavior='timesheet-state'>
			<%= timesheet.employee.name %> <%=timesheet.job.title %>
			<span class='label label-danger black pull-right'>
			<i class="fa fa-calendar-times-o fa-1x"></i>
			<%= timesheet.state.upcase %>
			</span>
		</h4>
		<% end %>
	</div>
				<div class="conversation-body blue-wave">

					<div class="col-md-4 col-sm-6 col-xs-6">
						
					<%= link_to(admin_timesheet_path(timesheet), class: 'b') do %>
					<i class="fa fa-calendar-times-o fa-1x"></i>
					<%= timesheet.week_begin %>  -  <%= timesheet.week_ending %>
					
				
					<% end %>
					
							<h5> <%= timesheet.company.name %> </h5>
					</div>
					<div class=" col-md-4 col-sm-4">
						<span class='text-center'>
							<strong>	Regular Hours:	<%= timesheet.reg_hours.round(2) %></strong>

								<strong>	Overtime Hours:	<%= timesheet.ot_hours.round(2) %></strong>
						</span>
					</div>
					<div class="col-md-4">
						<span class='text-center'>
							<strong>	Gross Pay:	<%= number_to_currency(timesheet.gross_pay) %></strong>

								<strong>	Total Bill:	<%= number_to_currency(timesheet.total_bill) %></strong>
						</span>
					</div>
					
					
					
						<div id='timesheet-tools' class="btn-toolbar" role="toolbar" aria-label="">
							<div class='btn-group' role='group'>
								
								<%= link_to(admin_timesheet_path(timesheet), class: "" ) do %>
								<span class="fa-stack fa-lg">
								  <i class="fa fa-square-o fa-stack-2x"></i>
								  <i class="fa fa-folder-open fa-stack-1x"></i>
								</span>
							
								<% end %>
						
						<%= link_to(edit_admin_timesheet_path(timesheet), class: "" ) do %>
							<span class="fa-stack fa-lg">
								  <i class="fa fa-square-o fa-stack-2x"></i>
								  <i class="fa fa-pencil fa-stack-1x"></i>
								</span>
						<% end %>
		
						<%= link_to(admin_timesheet_path(timesheet), method: :delete, data: { confirm: 'Are you sure?' }) do %>
								<span class="fa-stack fa-lg">
								  <i class="fa fa-square-o fa-stack-2x"></i>
								  <i class="fa fa-trash fa-stack-1x"></i>
								</span>
		
						<% end %>
					<button class='b' data-behavior="timesheet-toggle" >
						<span  class="" data-behavior="approve-button" >
					        
					          <% if timesheet.approved? %>
					       
								  <i class="fa fa-times fa-1x"></i>
							
					          <% else %>
						         
								  <i class="fa fa-check fa-1x"></i>
					          <% end %>
					        </span>
					</button>
					<%= link_to(admin_timesheet_path(timesheet, format: :pdf)) do %>
								<span class="fa-stack fa-lg">
								  <i class="fa fa-square-o fa-stack-2x"></i>
								  <i class="fa fa-download fa-stack-1x"></i>
								</span>
		  					
		  				
		  				<% end %>
							</div>
							
							
						</div>
						<% if timesheet.approved? %>
							<p class='text-right' data-behavior='user-approved'><small>
								
							 Approved by: <%= timesheet.user_approved %></small></p>
							 <% end %>
					</div>
			
</div>
	
