<% if timesheet.approved? %>
<div class="conversation-item item-right clearfix" data-behavior="timesheet" data-id="<%= timesheet.id %>">

<% else %>

<div class="conversation-item item-left clearfix" data-behavior="timesheet" data-id="<%= timesheet.id %>">

<% end %>
				<div class="conversation-user">'
				<%= link_to(admin_timesheet_path(timesheet, class: 'btn btn-primary btn-lg')) do %>
								
		  					<i class="fa fa-user fa-3x"></i>
		  				<%= timesheet.employee.name %>
		  				<% end %>
				
					
				</div>
			
				
				<div class="conversation-body">
					<div class="name">
						<span class="fa-stack fa-lg">
						  <i class="fa fa-square-o fa-stack-2x"></i>
						  <i class="fa fa-money fa-stack-1x"></i>
						  
						</span>
						<span>
						Gross pay	<%= number_to_currency(timesheet.gross_pay) %>
						</span>
						
					</div>
					<div class="name">
						<span class="fa-stack fa-lg">
						  <i class="fa fa-square-o fa-stack-2x"></i>
						  <i class="fa fa-money fa-stack-1x"></i>
						  
						</span>
						<span>
						Total billings:	<%= number_to_currency(timesheet.total_bill) %>
						</span>
						
					</div>
					<div class="name">
						<span class="fa-stack fa-lg">
						  <i class="fa fa-square-o fa-stack-2x"></i>
						  <i class="fa fa-clock-o fa-stack-1x"></i>
						</span>
						<span>
						<%= timesheet.total_hours %>
						</span>
					</div>
					<div class="time hidden-xs">
						<%= timesheet.week_ending %>
					</div>
					<div class="text">
						<div id='timesheet-tools' class="btn-toolbar" role="toolbar" aria-label="">
							<div class='btn-group' role='group'>
								
								<%= link_to(admin_timesheet_path(timesheet), class: "" ) do %>
								<span class="fa-stack fa-lg">
								  <i class="fa fa-square-o fa-stack-2x"></i>
								  <i class="fa fa-folder-open fa-stack-1x"></i>
								</span>
							
								<% end %>
						
						<%= link_to(edit_admin_timesheet_path(timesheet), class: "" ) do %>
							<span class="fa-stack fa-lg">
								  <i class="fa fa-square-o fa-stack-2x"></i>
								  <i class="fa fa-pencil fa-stack-1x"></i>
								</span>
						<% end %>
		
						<%= link_to(admin_timesheet_path(timesheet), method: :delete, data: { confirm: 'Are you sure?' }) do %>
								<span class="fa-stack fa-lg">
								  <i class="fa fa-square-o fa-stack-2x"></i>
								  <i class="fa fa-trash fa-stack-1x"></i>
								</span>
		
						<% end %>
					<a data-behavior="timesheet-toggle" >
						<span  class="fa-stack lg" data-behavior="approve-button" >
					        
					          <% if timesheet.approved? %>
					          
								  <i class="fa fa-square-o fa-stack-2x"></i>
								  <i class="fa fa-times fa-stack-1x"></i>
							
					          <% else %>
						          <i class="fa fa-square-o fa-stack-2x"></i>
								  <i class="fa fa-check fa-stack-1x"></i>
					          <% end %>
					        </span>
					</a>
					<%= link_to(admin_timesheet_path(timesheet, format: :pdf)) do %>
								<span class="fa-stack fa-lg">
								  <i class="fa fa-square-o fa-stack-2x"></i>
								  <i class="fa fa-download fa-stack-1x"></i>
								</span>
		  					
		  				
		  				<% end %>
							</div>
							
							
						</div>
					</div>
				</div>
</div>
	
