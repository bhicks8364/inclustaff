<div class='table-responsive' data-behavior="timesheet-list">
<table id='timesheets-datatable' class="display" cellspacing="0" width="100%">
	<thead>
		<th class='text-center'><i class="fa fa-calendar-o"></i><br>Week</th>
		<th class='text-center'><i class="fa fa-building"></i><br>Company</th>
		<th class='text-center'><i class="fa fa-briefcase"></i><br>Job</th>
		<th class='text-center'><i class="fa fa-user"></i><br>Employee</th>
		<th class='text-center'><i class="fa fa-money"></i><br>Gross Pay</th>
		<th class='text-center'><i class="fa fa-clock-o"></i><br>Hours</th>
		<th class='text-center'><i class="fa fa-certificate"></i><br>Status</th>
		<th class='text-center'><i class="fa fa-cogs"></i><br>Actions</th>
	</thead>
	<tbody>
	
	
		<% @timesheets.order(created_at: :desc).each do |timesheet| %>
	<tr data-behavior="timesheet" data-id="<%= timesheet.id %>">
		<td><strong><%= timesheet.week_ending %></strong></td>
		<td class='text-center'><%= link_to timesheet.order.company, admin_company_path(timesheet.company), class: 'table-link'  %></td>
      	<td class='text-center'><%= link_to timesheet.employee.name, admin_employee_path(timesheet.employee), class: 'table-link' %></td>

		<td class='text-center'><%= link_to timesheet.job.title, admin_job_path(timesheet.job), class: 'table-link'  %></td>
			

		<td class='text-center'><%= timesheet.gross_pay.present? ? number_to_currency(timesheet.gross_pay) : timesheet.current_shift.state.upcase %></td>
		

		<td class='text-center'><%= timesheet.total_hours.present? ? timesheet.total_hours : timesheet.current_shift.state.upcase %></td>
		<td class='text-center'>
			<a class='table-link' data-behavior="timesheet-toggle" >
				<span  class="fa-stack" data-behavior="approve-button" >
		          <% if timesheet.approved? %>
					  <i class="fa fa-square-o fa-stack-2x"></i>
					  <i class="fa fa-times fa-stack-1x"></i>
		          <% else %>
			          <i class="fa fa-square-o fa-stack-2x "></i>
					  <i class="fa fa-check fa-stack-1x"></i>
		          <% end %>
			    </span>
			</a><br>
			<%= timesheet.state.upcase %>
		</td>
  		<td class="text-center"><%= render 'admin/timesheets/tool_buttons', timesheet: timesheet %></td>

		</tr>
		
		<% end %>
	</tbody>
</table>
</div>
