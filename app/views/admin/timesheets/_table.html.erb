





<div  data-behavior="timesheet-list">
<table class="table">
	<tbody>
		<% @timesheets.order(updated_at: :desc).each do |timesheet| %>

	<tr data-behavior="timesheet" data-id="<%= timesheet.id %>">

			<td style="width: 20%;">
				<%= timesheet.week_ending %>
				<span data-behavior='approved-circle'>
					<% if timesheet.approved? %>
		            	<i class="fa fa-check-square-o fa-2x"></i>
		          	<% else %>
		            	<i class="fa fa-square-o fa-2x"></i>
		            <% end %>
				</span>
				<%= button_tag(type: "button", class: 'btn btn-sm clock-button', data: { behavior: "timesheet-toggle" }) do %>
			        <span data-behavior="approve-button"> 
			          <% if timesheet.approved? %>
			            <i class='fa fa-times fa-lg red'></i> 
			          <% else %>
			            <i class='fa fa-check-circle fa-lg green'></i>
			          <% end %>
			        </span>
			      <% end %>
	          <span data-behavior="user_approved">
	          </span>
	      	</td>
	      	<td><%= timesheet.shifts.count %></td>




			<td style="width: 20%;">
				<span class="name">
				<%= link_to timesheet.employee.name, admin_employee_path(timesheet.employee) %>
				</span>
			</td>
			
			<td style="width: 20%;">
				<span class="price">
					<i class="fa fa-money"></i> <%= number_to_currency(timesheet.gross_pay) %>
				</span>
				
			</td>
			
			<td style="width: 20%;"><span class="fa-stack">
						<i class="fa fa-square fa-stack-2x"></i>
						
						<i class="fa fa-clock-o fa-stack-1x fa-inverse"></i>
					</span>
					<strong><%= timesheet.total_hours %></strong></td>
			<td style="width: 10%;">
				<span class="fa-stack">
						<i class="fa fa-square green fa-stack-2x"></i>
						
						<i class="fa fa-money fa-stack-1x fa-inverse"></i>
						
					</span>
					<strong><%= number_to_currency(timesheet.gross_pay) %></strong>
			</td>
		
        
      <td class="text-center" style="width: 20%;">
				
				
				<%= link_to(admin_timesheet_path(timesheet), class: "table-link" ) do %>
					<span class="fa-stack">
						<i class="fa fa-square fa-stack-3x fa-inverse"></i>
						<i class="fa fa-folder-open fa-stack-1x "></i>
					</span>
				<% end %>
				
				<%= link_to(edit_admin_timesheet_path(timesheet), class: "table-link" ) do %>
					<span class="fa-stack">
						<i class="fa fa-square fa-stack-3x fa-inverse"></i>
						<i class="fa fa-pencil fa-stack-1x "></i>
					</span>
				<% end %>

				<%= link_to(admin_timesheet_path(timesheet), method: :delete, data: { confirm: 'Are you sure?' }) do %>
					<span class="fa-stack">
						<i class="fa fa-square fa-stack-3x fa-inverse"></i>
						<i class="fa fa-trash-o fa-stack-1x "></i>
					</span>
				<% end %>
				<%= link_to(admin_timesheet_path(timesheet), method: :delete, data: { confirm: 'Are you sure?' }) do %>
					<span class="fa-stack">
						<i class="fa fa-square fa-stack-3x fa-inverse"></i>
						<i class="fa fa-trash-o fa-stack-1x "></i>
					</span>
				<% end %>
			</td>

        
        
        
        
        
        
        
        
		</tr>
		<% end %>
	</tbody>
</table>
</div>
