<div class='' data-behavior="timesheet-list">
<table class="table table-bordered">
	<thead>
		<th><i class="fa fa-calendar-o"></i>&nbsp; Week</th>
		<th><i class="fa fa-building"></i>&nbsp; Company</th>
		<th><i class="fa fa-user"></i>&nbsp; Employee</th>
		<th><i class="fa fa-money"></i>&nbsp; Gross Pay</th>
		<th><i class="fa fa-clock-o"></i>&nbsp; Hours</th>
		<th><i class="fa fa-certificate"></i>&nbsp; Status</th>
		
	</thead>
	<tbody>
	
	
		<% timesheets.each do |timesheet| %>
		<tr data-behavior="timesheet" data-id="<%= timesheet.id %>">
		<td><strong><%= link_to timesheet.week_ending, admin_timesheet_path(timesheet), class: 'black' %></strong></td>
		<td><%= link_to timesheet.order.company, admin_company_path(timesheet.company), class: 'black'  %></td>
      	<td><%= link_to timesheet.employee.name, admin_employee_path(timesheet.employee), class: 'black' %></td>
		<td><%= timesheet.gross_pay.present? ? number_to_currency(timesheet.gross_pay) : timesheet.shifts.last.state.upcase %></td>
		<td><%= timesheet.total_hours.present? ? timesheet.total_hours.round(2) : timesheet.shifts.last.state.upcase %></td>
		<td>
			<a class='btn btn-tiny' data-behavior="timesheet-toggle" >
				<span  class="fa-stack" data-behavior="approve-button" >
		          <% if timesheet.approved? %>
					  <i class="fa fa-square-o fa-stack-2x"></i>
					  <i class="fa fa-times fa-stack-1x"></i>
		          <% else %>
			          <i class="fa fa-square-o fa-stack-2x "></i>
					  <i class="fa fa-check fa-stack-1x"></i>
		          <% end %>
			    </span>
			</a>
			<span data-behavior='timesheet-state'><%= timesheet.state.upcase %></span>
		</td>
  		

		</tr>
		
		<% end %>
	</tbody>
</table>
</div>
