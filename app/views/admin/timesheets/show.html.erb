<p id="notice"><%= notice %></p>
<%= render @timesheet.job %>
  <% if @timesheet.clocked_in? %>
  <p id="clock-status" class="text-center"><strong><%= @timesheet.employee_name %> is currently clocked in. </p>
  <%= render @timesheet.current_shift %>
  
  <% else %>
  <%= @timesheet.shifts.last.state %>
                          
                          
                          
<% end %>

<span id='updated-at'></span>

<h3><strong><%= link_to @employee.name, admin_employee_path(@employee) %></strong> <small><%= @job.title.titleize %></small></h3>

For the week of: <%= @timesheet.week_ending  %>.
<br>
Week: <%= @timesheet.week %>
<br>
  <strong>Regular hours:</strong>
  <%= @timesheet.reg_hours %>
<br>
  <strong>Overtime hours:</strong>
  <%= @timesheet.ot_hours %>
<br>
  <strong>Gross pay:</strong>
  <%= number_to_currency(@timesheet.gross_pay) %><br>

   <strong>Last Clock In:</strong> <%= @timesheet.last_clock_in.strftime("%B %e, %Y  at   %I:%M %p") %>
   <br>
<%= link_to 'View Shifts', '#', id: 'shifts-button', class: 'btn btn-primary btn-sm' %>
<ul id="shifts-list"> 
  <%= render @shifts.limit(1) %>
</ul>
<hr>

<p><%= @timesheet.state.titleize %></p>
  
 

<%= link_to(admin_timesheet_path(@timesheet, format: :pdf), class: 'btn btn-primary') do %>
  					<i class="fa fa-download fa-lg"></i> Download PDF
  				
