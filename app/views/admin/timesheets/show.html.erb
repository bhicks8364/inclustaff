<div class='col-md-12'>

<div class=''>
 
       <%= link_to(admin_timesheet_path(@timesheet, format: :pdf), class: 'btn btn-primary') do %>
  					<i class="fa fa-download fa-md"></i> Download PDF
  				
  				<% end %>
  		
          <%= link_to 'All Timesheets', admin_job_timesheets_path(@job), class: 'btn btn-primary' %>
          <%= link_to 'View Invoice', admin_invoice_path(@timesheet.invoice), class: 'btn btn-primary' %>
      
</div>
 <div class='col-md-4 bg-white'>
     <h3>For the week of:<strong><br>
        <%= @timesheet.week_begin %>
          - 
        <%= @timesheet.week_ending %>
      </strong></h3>
 </div>
     
<div class='col-md-8 bg-white' data-behavior="timesheet-list">
    
  <%= render @timesheet %>
  
  </div>
 

         <div class='col-md-6' id='comment-list'>
            <% @timesheet.comments.unread.each do |comment| %>
            
                <%= render 'comments/comment', comment: comment %>
            <% end %>
        
        
          <%= render partial: "comments/form", locals: {commentable: @timesheet} %>
         </div>
    
      </div>

<div class=''>
  <h3> Shifts</h3>
  
   <%= render 'admin/shifts/week_calendar', shifts: @timesheet.shifts %>
</div>
<div class='col-md-12'>
  <h3> Shifts</h3>
   <%= render 'admin/shifts/table' %>
</div>




</div>

