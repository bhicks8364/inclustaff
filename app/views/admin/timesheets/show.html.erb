<div class='col-md-12 lightbox-long'>

<div class='btn-group'>
    <%= link_to "<i class='fa fa-download fa-md'></i> Download PDF".html_safe, admin_timesheet_path(@timesheet, format: :pdf), class: 'btn btn-primary' %>
    <%= link_to 'All Timesheets', admin_job_timesheets_path(@job), class: 'btn btn-primary' %>
    <%= link_to 'View Invoice', admin_invoice_path(@timesheet.invoice), class: 'btn btn-primary' %>
      
</div>
 <div class='col-md-4 '>
     <h3>For the week of:<strong><br>
        <%= @timesheet.week_begin %>
          - 
        <%= @timesheet.week_ending %>
      </strong></h3>
 </div>
     
<div class='col-md-8 ' data-behavior="timesheet-list">
    
  <%= render @timesheet %>
  
  </div>
         <div class='col-md-6'>
            <h2>Comments</h2>
            <div data-behavior='comment-list' class='scroll300' id='comment-list'>
                <% @timesheet.comments.unread.order(created_at: :desc).each do |comment| %>
                    <%= render 'comments/comment', comment: comment %>
                <% end %>
            </div>
            <%= render partial: "comments/form", locals: {commentable: @timesheet} %>
         </div>
    

<div class='col-md-6'>
  <h3> Shifts</h3>
   <%= render 'admin/shifts/table' %>
</div>




</div>

