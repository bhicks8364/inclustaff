<h1>Adjustments</h1>
 <div class='btn-group'>
    <%= link_to 'Add Adjustment', new_admin_timesheet_adjustment_path(@timesheet), class: 'btn btn-primary' %>
     <%= link_to 'Back to Timesheet', admin_timesheet_path(@timesheet), class: 'btn btn-primary' %>
 </div>
    <% if @timesheet.adjustments.any? %>
    <div class='floating-box'>
        <% @timesheet.adjustments.each do |adjustment| %>
            <p> <%= adjustment.creator.try(:name) %> <%= number_to_currency(adjustment.amount) %>  (<%= adjustment.adj_type %>) - <small><%= time_ago_in_words(adjustment.created_at) %> ago</small></p>
            <hr>
            <%= link_to "Delete", admin_timesheet_adjustment_path(@timesheet, adjustment), method: :delete %>
        <% end %>
    </div>
    <% end %>