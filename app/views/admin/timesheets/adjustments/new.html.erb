        <div class="form-group">
            <%= f.input :amount, wrapper_html: {class: "col-md-6"}  %>
        </div>
    </div>
    <div class="hide-this" id="GasAdj">
        <div class="form-group">
            <%= f.input :amount, wrapper_html: {class: "col-md-6"}  %>
        </div>
    </div>
    <%= f.input :amount, wrapper_html: {class: "col-md-6"}  %>
