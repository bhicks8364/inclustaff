<div class="col-md-12">
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <h1>Add An Adjustment</h1>
<h1><%= @current_admin.name %></h1>
<%= simple_form_for( [:admin, @timesheet, @adjustment]) do |f| %>
<%= f.error_notification %>
    <div class='form-group'>
         <%= f.input :entered_by, input_html: { value: @current_admin.id, class: "hide-this"}, label: false %>
        <%= f.input :adj_type, as: :radio_buttons, collection: ["Bonus", "Gas", "Rate Adj", "Vacation", "Holiday"], include_blank: false %>
        
       
    </div>
    
   
    
<button type="button" class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target=".bs-example-modal-lg"> Continue </button>

<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-lg">
    <div class="modal-content col-md-12 well">
    <div class="form-group">
        <%= f.input :pay_rate, input_html: {value: @timesheet.job.pay_rate}, wrapper_html: {class: "col-md-4"} %>
        <%= f.input :bill_rate, input_html: {value: @timesheet.job.bill_rate}, wrapper_html: {class: "col-md-4"} %>
        <%= f.input :hours, wrapper_html: {class: "col-md-4"} %>
    </div>
    <div class="form-group">
        <%= f.input :amount, wrapper_html: {class: "col-md-6"}  %>
        <%= f.input :taxable, as: :select, wrapper_html: {class: "col-md-6"}   %>
        <%= f.submit %>
    </div>
    </div>
  </div>
</div>
 <% end %>
 </div>
</div>