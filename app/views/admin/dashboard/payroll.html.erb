

<div class="col-md-12 lightbox">
	<h1 class='page-header white'>Payroll Dashboard</h1>
	<div class="tabs-wrapper">
		<div class="clearfix">
			<ul class="nav nav-tabs">
			  <li class="active"><a href="#tab-home" data-toggle="tab">Dashboard</a></li>
			  <li class=""><a href="#tab-timesheets" data-toggle="tab">Timesheets</a></li>
			  <li class=""><a href="#tab-aca" data-toggle="tab">ACA</a></li>
			  <li class=""><a href="#tab-calendar" data-toggle="tab">Calendar</a></li>
			  <li class=""><a href="#tab-employees" data-toggle="tab">Employees</a></li>
			  <li class=""><a href="#tab-admins" data-toggle="tab">Admins</a></li>
			</ul>
		</div>
		<div class="tab-content">
			<div class="tab-pane fade in active" id="tab-home">
				<div class='col-md-12 bg-white'>
	       			
                    
	       			
	       			<div class='col-md-12 bg-white'>
	       				<%= render 'admin/infoboxes/payroll_boxes' %>
	       			</div>
	       			
	 			</div>
			</div>
			<div class="tab-pane fade in" id="tab-aca">
				<div class='col-md-12 bg-white'>
			        <%= link_to "ACA Reports", report_admin_employees_path, class: "btn btn-primary" %>
				</div>
			</div>
			<div class="tab-pane fade" id="tab-admins">
				<div class='col-md-4 bg-white'>
       				<div class='text-center'>
       					<h5 class=''> <i class="fa fa-user-plus fa-fw fa-border"></i> 
						There are currently <%= @current_agency.admins.count %> admin accounts.</h5>
						<p class=''>Add additional accounts below.</p>
						<%= link_to "New Admin Account", new_admin_path, class: 'btn btn-success' %>
       				</div>
       			</div>
			</div>
			<div class="tab-pane fade in" id="tab-employees">
			    <div class='col-md-12 bg-white'>
			        <h2>Active Employees</h2>
					<%= render 'admin/employees/table', employees: @current_agency.employees.assigned %>
					 
				</div>
			</div>
			<div class="tab-pane fade in" id="tab-timesheets">
				<div class='col-md-3 text-center metal lighterbox'>
					<h3 class='bold'>This Week</h3>	  	
					<div class='list-group'>
						<%= link_to(admin_timesheets_path, class: "btn btn-primary btn-lg btn-block ") do %>
						<span class="label-fill"><%= @current_agency.timesheets.current_week.approved.try(:count) %> Approved </span>
				
						<span class="label-fill"><%= @current_agency.timesheets.current_week.pending.try(:count) %> Pending </span>
						<% end %>
					</div>
					<hr>
					<h3 class='bold'>Last Week</h3>
					<div class='list-group'>	
					<%= link_to(past_admin_timesheets_path, class: "btn btn-primary btn-lg btn-block") do %>
						<span class="label-fill"><%= @current_agency.timesheets.last_week.approved.try(:count) %> Approved </span>
						<span class="label-fill"><%= @current_agency.timesheets.last_week.pending.try(:count) %> Pending </span>
					<% end %>
					</div>
				</div>
			    <div class='col-md-9 bg-white'>
			        <h2>Current Timesheets</h2>
					<%= render 'admin/timesheets/table', timesheets: @timesheets.current_week.order(updated_at: :desc) %>
					 
				</div>
			</div>
			<div class="tab-pane fade" id="tab-calendar">
				<div class='col-md-12 bg-white'>
					<h3>Events</h3>
					<div class='col-md-3 bg-white'>
	       				<%= render 'admin/shifts/one_day_calendar', shifts: @shifts %>
	       			</div>
	       			<div class='col-md-9 bg-white'>
	       				<%= render 'admin/shared/one_day_calendar', events: @current_agency.events.order(created_at: :desc) %>
	       			</div>
					 
				</div>
			</div>
		</div>
	</div>
</div>