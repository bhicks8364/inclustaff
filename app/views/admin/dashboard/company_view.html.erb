<h1><%= @viewing.try(:name) %>'s Dashboard</h1>


<div class="col-md-12">
	<div class='row'>
		<div class="col-lg-3 col-sm-3 col-xs-6">
			<div class="main-box infographic-box">
				<span class="headline"> <%= @current_agency.companies.count %> Current Companies</span>
				<%= link_to "<span class=''><i class='fa fa-building-o fa-2x pull-left'></i> <strong>View Companies</strong></span>".html_safe, admin_companies_path, class: 'btn' %>
			</div>
		</div>
		<div class="col-lg-3 col-sm-3 col-xs-6">
			<div class="main-box infographic-box">
				<span class="headline"> <%= @current_agency.orders.needs_attention.count %> Open Orders</span>
				<%= link_to "<span class=''><i class='fa fa-users fa-2x pull-left'></i> <strong>View Orders</strong></span>".html_safe, admin_orders_path, class: 'btn' %>
			</div>
		</div>
		<div class="col-lg-3 col-sm-3 col-xs-6">
			<div class="main-box infographic-box">
				<span class="headline"> <%= @current_agency.jobs.count %> Active Jobs</span>
				<%= link_to "<span class=''><i class='fa fa-briefcase fa-2x pull-left'></i> <strong>View Active Jobs</strong></span>".html_safe, admin_jobs_path, class: 'btn' %>
			</div>
		</div>
		
		<div class="col-lg-3 col-sm-3 col-xs-6">
			<div class="main-box infographic-box">
				<span class="headline"> <%= @current_agency.employees.count %> Current Employees</span>
				<%= link_to "<span class=''><i class='fa fa-users fa-2x pull-left'></i> <strong>View Employees</strong></span>".html_safe, admin_employees_path, class: 'btn' %>
			</div>
		</div>
		
		
		
		
		<div class="col-lg-3 col-sm-3 col-xs-6">
			<div class="main-box infographic-box">
				
				<%= link_to "<span class=''><i class='fa fa-user-plus fa-2x pull-left'></i> <strong>Add Employee</strong></span>".html_safe, new_user_registration_path, class: 'btn' %>
			</div>
		</div>
		<div class="col-lg-3 col-sm-3 col-xs-6">
			<div class="main-box infographic-box">
				
				<%= link_to "<span class=''><i class='fa fa-user-plus fa-2x pull-left'></i> <strong>Add Admin</strong></span>".html_safe, new_admin_registration_path, class: 'btn' %>
			</div>
		</div>
		<div class="col-lg-3 col-sm-3 col-xs-6">
			<div class="main-box infographic-box">
				
				<%= link_to "<span class=''><i class='fa fa-user-plus fa-2x pull-left'></i> <strong>Add Job</strong></span>".html_safe, new_admin_job_path, class: 'btn' %>
			</div>
		</div>
		<div class="col-lg-3 col-sm-3 col-xs-6">
			<div class="main-box infographic-box">
				
				<%= link_to "<span class=''><i class='fa fa-building-o fa-2x pull-left'></i> <strong>Add Company</strong></span>".html_safe, new_admin_company_path, class: 'btn' %>
			</div>
		</div>
		
		<div class="col-lg-3 col-sm-3 col-xs-6">
			<div class="main-box infographic-box">
				<i class="fa fa-users red"></i>
				<span class="headline">Employees</span>
				<span class="value"><%= @jobs.try(:count) %></span>
				
			</div>
		</div>
		<div class="col-lg-3 col-sm-3 col-xs-6">
			<div class="main-box infographic-box">
				
				<%= link_to "<span class=''><i class='fa fa-building-o fa-2x pull-left'></i> <strong>Add Company</strong></span>".html_safe, new_admin_company_path, class: 'btn' %>
			</div>
		</div>
		
		<div class="col-lg-3 col-sm-3 col-xs-6">
			<div class="main-box infographic-box">
				<i class="fa fa-users red"></i>
				<span class="headline">Employees</span>
				<span class="value"><%= @employees.try(:count) %></span>
				
			</div>
		</div>
		
		
		
		
		
		
		<div class="col-lg-3 col-sm-3 col-xs-6">
			<div class="main-box infographic-box">
				
				<i class="fa fa-money green"></i>
				<span class="headline">Total Payroll</span>
				<%= number_to_currency(@timesheets.current_week.sum(:gross_pay)) %>
			</div>
		</div>
		
		<div class="col-lg-3 col-sm-3 col-xs-6">
			<div class="main-box infographic-box">
				<i class="fa fa-clock-o"></i>
				<span class="headline">Clocked In</span>
				<%= pluralize(@clocked_in.count, 'Employee') %>
		</div>
		
		<div class="col-lg-3 col-sm-3 col-xs-6">
			<div class="main-box infographic-box">
				<% if @orders.needs_attention.any? %>
				<i class="fa fa-exclamation red"></i>
				<span class="headline">Open</span>
				<span class="value"><small><%= pluralize(@orders.needs_attention.count, 'Order')  %></small></span>
				<% end %>
			</div>
		</div>
	</div>
	<%= render 'admin/shared/infoboxes' %>
		
<div class='col-lg-12'>
	<div='row'>
		<div class="col-lg-12">
			<%= render 'admin/shared/updates' %>
		</div>
		
	
	</div>
</div>



