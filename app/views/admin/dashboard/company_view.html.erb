<h1><%= @company ? @company.name : @agency.name %>'s Dashboard</h1>


<div class="col-md-12">
	<div class='row'>
		<div class="col-lg-6 col-sm-6 col-xs-12">
			<div class="main-box infographic-box">
				<i class="fa fa-users red"></i>
				<span class="headline">Employees</span>
				<span class="value"><%= @company ? @company.jobs.count : @agency.jobs.count %></span>
			</div>
		</div>
		<div class="col-lg-6 col-sm-6 col-xs-12">
			<div class="main-box infographic-box">
				<i class="fa fa-money green"></i>
				<span class="headline">Total Payroll</span>
				<span class="value"><%= number_to_currency(@timesheets.current_week.sum(:gross_pay)) %></span>
			</div>
		</div>
		
		<div class="col-lg-6 col-sm-6 col-xs-12">
			<div class="main-box infographic-box">
				<i class="fa fa-clock-o"></i>
				<span class="headline">Clocked In</span>
				<span class="value"><small><%= pluralize(@clocked_in.count, 'Employee') %></small></span>
			</div>
		</div>
		
		<div class="col-lg-6 col-sm-6 col-xs-12">
			<div class="main-box infographic-box">
				<% if @orders.needs_attention.any? %>
				<i class="fa fa-exclamation red"></i>
				<span class="headline">Need Attention</span>
				<span class="value"><small><%= pluralize(@orders.needs_attention.count, 'Order')  %></small></span>
				<% end %>
			</div>
		</div>
	</div>
	<%= render 'admin/shared/infoboxes' %>
	
	
		
			<%= render 'admin/shared/updates' %>
		

	<div class="col-lg-8">
			<div class="main-box clearfix">
				<h2>Current Jobs</h2>
				<div class="table-responsive">
					<table class="table table-striped table-hover">
						<thead>
							<tr>
							  <th>Employee</th>
						      <th>Title</th>
						      <th>Pay rate</th> 
						      <th>Hours</th>
						      <th>Total Gross</th>
						      <th>Last In</th>
							</tr>
						</thead>
						<tbody>
							<% @jobs.each do |job| %>
							<% if job.on_shift? %>
								<tr class="bg-danger">
							<% else%>
								<tr class="bg-success">
							<% end %>
								<td><%= render 'admin/jobs/modal', job: job %> <%= link_to job.employee.name, admin_employee_path(job.employee) %></td>
    							<td><%= link_to job.title, admin_job_path(job) %></td>	
								<td class="text-center"><%= number_to_currency(job.pay_rate) %></td>
								<td><%= job.total_hours.round(2) %></td>
						        <td><%= number_to_currency(job.total_gross_pay) %></td>
						        <td><%= job.last_clock_in %></td>
							</tr>
							<% end %>
							
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>

		<div class="col-lg-4">
			<div class="main-box clearfix">
				
				
			</div>
		</div>
		<div class="col-lg-4">
			<div class="main-box clearfix">
				<h2>Events</h2>
				<% @events.each do |event| %>
				  <% if lookup_context.template_exists?(event.action, "events/activities", true) %>
				    <%= render partial: "events/activities/#{event.action}", locals: {event: event} %>
				  <% end %>
				<% end %>

				
			</div>
		</div>
		<div class="col-lg-4">
			<div class="main-box clearfix">
				
				
			</div>
		</div>

	    


			

</div>



