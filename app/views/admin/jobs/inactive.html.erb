<div class='col-md-12 lightbox-long'>
        <div class='col-md-3'>
            <%= render 'admin/jobs/pending_list', jobs: @jobs.inactive %>
        </div>
    <div class='col-md-9'>
        <% if @jobs.active.any? %>
        
    <h1>All Inactive Jobs</h1>
    <%= render 'admin/jobs/table', jobs: @jobs.inactive %>
    <% else %>
    <h1 class='page-header'>
        No inactive jobs to display.
   </h1>
    <% end %>
    
    
    <%= link_to 'View Active', admin_jobs_path, class: 'btn btn-primary' %>
    </div>
    
</div>