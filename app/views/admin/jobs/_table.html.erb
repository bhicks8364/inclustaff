
<div class="table-responsive">
  

<table id='jobs-datatable' class="table table-hover display" cellspacing="0" width="95%">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Pay rate</th> 
      <th>Hours</th>
      <th>Total Gross</th>
      <th>Mark Up</th>
      <th>Total Bill</th>
      <th>Recruiter</th>
      <th>Acct Manager</th>
      
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
    <% if job.on_shift? %>
    <tr class="success">
      <% else%>
    <tr class="info">
      
      <% end %>

        <td><%= render 'admin/jobs/modal', job: job %><span class='hide-this'><%=job.employee.last_name %></span><td>
        
        <td><%= number_to_currency(job.pay_rate) %></td>
        <td><%= job.total_hours.round(2) %></td>
        <td><%= number_to_currency(job.total_gross_pay) %></td>
        <td><%= job.mark_up_percent %></td>
        <td><%= number_to_currency(job.total_gross_bill) %></td>
        <td><%= job.recruiter.present? ? job.recruiter.last_name : "Unassigned" %></td>
        <td><%= job.account_manager.present? ? job.account_manager.last_name : "Unassigned" %></td>
        
      </tr>
    <% end %>
  
  </tbody>
</table>
</div>


