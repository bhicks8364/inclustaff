
<div class="job" data-behavior="job-list">
    <div data-behavior="job" data-id="<%= job.id %>">
        
      <h5 class=""><%= link_to job.title, admin_job_path(job), class: 'table-link' %></h5>
       
   
    
      <div class=''>
        
           <% if job.on_shift? %>
           <span data-behavior='shift-state'>
    <strong> <%= link_to job.employee.first_name, admin_employee_path(job.employee), class: 'table-link' %> is currently clocked in.</strong><br>
             
           
           </span>
             <span data-behavior="time-in">
                  <small><strong> In:</strong> <%= job.current_shift.time_in.strftime("%l:%M%P") %></small>
            </span>
             
               
            <button data-behavior="job-out-button_<%= job.id %>" class='badge badge-danger'>
            <i class='fa fa-sign-out'></i> Clock Out
          </button>
          <button data-behavior="job-in-button_<%= job.id %>" class='hide-this badge badge-success'>
            <i class='fa fa-sign-out'></i> Clock In
          </button>
           <span data-behavior="time-out">
              </span>

        <% else %>
        
        <span data-behavior='shift-state'>
             <strong> <%= link_to job.employee.first_name, admin_employee_path(job.employee), class: 'table-link' %>
             is currently clocked out.</strong><br>
             
           
           </span>
        <span data-behavior="time-in">
          
        </span>
          <button data-behavior="job-in-button_<%= job.id %>" class='badge badge-success'>
            <i class='fa fa-sign-in'></i> Clock In
          </button>
          <button data-behavior="job-out-button_<%= job.id %>" class='hide-this badge badge-danger'>
            <i class='fa fa-sign-out'></i> Clock Out
          </button>
        
          
        

        <span data-behavior="time-out">
          
        </span>
      <% end %>
      
      
      </div>
          <p><small><%= job.staff %></small></p>
          
          <br>
          <p>Gross pay:<small><%= number_to_currency(job.total_gross_pay) %></small></p>
          <p>Total bill:<small><%= number_to_currency(job.total_gross_bill) %></small></p>
      </div>
      

             
    

     
     </div>

