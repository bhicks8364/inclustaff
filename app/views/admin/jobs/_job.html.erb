<div class="well well-sm" data-behavior="job-list">
    <div data-behavior="job" data-id="<%= job.id %>">

        
           <% if job.on_shift? %>
           <br>
           <span data-behavior='shift-state'>
    <strong> <%= link_to job.employee.first_name, admin_job_path(job), class: 'table-link' %> is currently clocked in.</strong><br>
             
           
           </span>
             <span data-behavior="time-in">
                  <small><strong> In:</strong> <%= job.current_shift.time_in.strftime("%l:%M%P") %></small>
            </span>
            
               
            <button data-behavior="job-out-button_<%= job.id %>" class='btn btn-danger'>
            <i class='fa fa-sign-out'></i> Clock Out
          </button>
          <button data-behavior="job-in-button_<%= job.id %>" class='hide-this btn btn-success'>
            <i class='fa fa-sign-out'></i> Clock In
          </button>
           <span data-behavior="time-out">
              </span>

        <% else %>
        
        <span data-behavior='shift-state'>
             <strong> <%= link_to job.employee.first_name, admin_employee_path(job.employee), class: 'table-link' %>
             is currently clocked out.</strong><br>
             
           
           </span>
        <span data-behavior="time-in">
          
        </span>
          <button data-behavior="job-in-button_<%= job.id %>" class='btn btn-success'>
            <i class='fa fa-sign-in'></i> Clock In
          </button>
          <button data-behavior="job-out-button_<%= job.id %>" class='hide-this btn btn-danger'>
            <i class='fa fa-sign-out'></i> Clock Out
          </button>
        
          
        

        <span data-behavior="time-out">
          
        </span>
      <% end %>

      </div>
      

             
    

     
     </div>