<div class='col-md-6'>
      <strong>Employee:</strong>
      <%= link_to @employee.name, admin_employee_path(@employee) %><br>
      <strong>Start date:</strong>
      <%= @job.start_date.strftime("%B %e, %Y ") %><br>
      <strong>Gross this week:</strong> <%= number_to_currency(@job.current_week_pay) %><br>
      <strong>Total Hours : </strong><%= @job.total_hours %>
      <strong>Total Gross : </strong><%= @job.total_hours %>
    </div>

    <div class='col-md-6'>
      <strong>Company:</strong>
      <%= link_to @company.name, @company %><br>
    
      <strong>Department:</strong>
      <%= link_to @order.title, admin_order_path(@order) %> <br>
      
      <strong>Job Title:</strong>
      <%= @job.title %><br>
      <strong>Recruiter:</strong>
      <% if @job.recruiter.present? %>
      <%= link_to @job.recruiter.name, @job.recruiter %>
      <% else %>
      No Recruiter Available.
      <% end %><br>
      <strong>Staff:</strong>
      <%= @job.staff %><br>
      
      <strong>Pay rate:</strong>
      <%= number_to_currency(@job.pay_rate, :unit => "$") %><br>
      
      <strong>Mentioned Admins</strong>
      <% if @job.mentioned_admins.any? %>
        <% @job.mentioned_admins.each do |admin|%>
          <%= admin.name %> - <%= admin.role %>
        <% end %>
      <% else %>
      No admins were mentioned.
      <% end %>
      
      <% link_to "EDIT", edit_admin_job_path(@job), class: "btn btn-warning" %>
    </div>
  

<%= render 'admin/employees/modal' %>

