<% if @jobs %>
<h1>Active Jobs</h1>
<div id="dataTable" class="table-responsive">
  <table id="myTable" class="table" cellspacing="0.5" width="85%">
  <thead>
    <tr>
      <th>Company</th>
      <th>Dept.</th>
      <th>Employee</th>
      <th>Title</th>
      <th>Start date</th>
      <th>Pay rate</th>
      <th>Hours this week</th>
      <th>Pay this week</th>
      <th>End date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
    <% if job.on_shift? %>
        <tr class="clocked_in">
      <% else %>
        <tr class="clocked_out">
      <% end %>
        <td><%= link_to job.company.name, job.company  %></td>
        <td><%= link_to job.order.title, company_order_path(@company, job.order) %></td>
        <td><%= link_to job.employee.name, admin_employee_path(job.employee) %></td>
        <td><%= job.title %></td>
        <td><%= job.start_date.strftime("%B %e, %Y") %></td>
        <td><%= number_to_currency(job.pay_rate) %></td>
        <td><%= job.current_week_hours %></td>
        <td><%= number_to_currency(job.current_week_pay) %></td>
        <td><% if job.end_date.nil? %><%= job.active? ? "Active" : "Terminated" %><% else %><%= job.end_date.strftime("%B %e, %Y") %><% end %> </td>
        <td><%= link_to "<span class='glyphicon glyphicon-info-sign' aria-hidden='true'></span>     View".html_safe, admin_job_path(job), class: "badge badge-default" %></td>
        <td><%= link_to "<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>".html_safe, edit_admin_job_path(job) %></td>
        <td><%= link_to "<span class='glyphicon glyphicon-trash' aria-hidden='true'></span>".html_safe, admin_job_path(job), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<% else %>
<h3>No jobs to show.</h3>
<% end %>



