<h3 class='metal'>Recruiting Calendar</h3>
<%= month_calendar events: @orders, attribute: :needed_by do |date, orders| %>
  <span class='cal-date'>
    <%= date %>
  </span>

  <% orders.each do |order| %>
    <div class='black small'>
      <%= signed_in_link_to(title_for(order), order, class: "small") %>
    </div>
  <% end %>
<% end %>