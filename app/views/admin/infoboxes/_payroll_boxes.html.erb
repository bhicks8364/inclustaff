<div class='payroll-boxes'>
	<div class="col-md-4 lightbox">
		
	</div>

	<div class="col-md-4 lightbox">
		<div class='center'>
				
		<% if @current_agency.timesheets.last_week.pending.none? %>
		<div class='text-center metal'>	  	
		
			<p class='lead'>
				All timesheets for last week have been approved.<br>
				<span class="list-group-item"><%= @current_agency.timesheets.last_week.approved.try(:count) %> Approved </span>
			</p>
			</div>
			<%= link_to(past_admin_timesheets_path(@current_admin.timesheets.last_week, format: :csv), class: 'btn btn-success') do %>
  				<i class="fa fa-upload fa-fw"></i> Export
  			<% end %>
  		<% end %>
		</div>
	</div>
	
	
	<div class="col-md-4 lightbox">
		<div class='center'>
			
			<% if @newly_added.any? %>
			
			<h3> <i class="fa fa-users fa-fw"></i> &nbsp; New Employees</h3>
			<div class="list-group">
				<% @newly_added.limit(3).each do |employee| %>
			<%= link_to "<i class='fa fa-user fa-fw'></i> &nbsp; #{employee.name}".html_safe, admin_employee_path(employee), class: "list-group-item list-group-item-info" %>
			<% end %>
			</div>	
			<% else %>
			<i class="fa fa-users fa-fw"></i>
			<p>There are no new employees at this time.</p>
			<% end %>
			<%= link_to(new_user_registration_path, class: 'btn btn-primary btn-lg btn-block') do %>
  					<i class="fa fa-user-plus fa-fw"></i> Add Employee
  				<% end %>
		</div>
		
	</div>
	
	
</div>
