<%= simple_form_for([:admin, @employee, @direct_deposit]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :effective_date, as: :date, order: [:month, :day, :year] %>
    <%= f.input :account_type, collection: ["Checking", "Savings", "Pay Card"], include_blank: false %>
    <hr>
    <%= f.input :routing_number %>
    <%= f.input :account_number %>
    <%= f.input :account_number_confirmation %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
