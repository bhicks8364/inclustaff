<table class="table table-bordered">
  <thead>
    <tr>
      
      <th>Work Date</th>
      <th>Employee</th>
      <th>Time In</th>
      <th>Time Out</th>
      <th>Hours</th>
      <th>Pay Rate</th>
      <th>Earnings</th>
      <% if current_admin.owner? || current_admin.payroll? %><th>Edit</th><% end %>

    </tr>
  </thead>

  <tbody>
    <% @shifts.order(:time_in).reverse_order.each do |shift| %>
      <% if shift.clocked_in? %>
        <tr class="bg-success">
      <% else %>
        <tr class="bg-warning">
      <% end %>
        <td><%= link_to shift.time_in.strftime("%x"), admin_shift_path(shift) %></td>
        <td><%= link_to shift.employee.name, admin_employee_path(shift.employee) %></td>
        <td><%= shift.time_in.strftime("%I:%M %p") %></td>
        <td><%= shift.clocked_out? ? shift.time_out.strftime("%I:%M %p") : "Clocked In" %></td>
        <td><%= shift.time_worked.round(2) %></td>
        <td><%= number_to_currency(shift.pay_rate) %></td>
        <td><%= number_to_currency(shift.earnings) %></td>
       <% if policy(shift).edit? %>
        <td><%= link_to(edit_admin_shift_path(shift), class: "table-link" ) do %>
					<span class="fa-stack">
						<i class="fa fa-square fa-stack-3x fa-inverse"></i>
						<i class="fa fa-edit fa-stack-1x "></i>
					</span>
				<% end %>
				<%= link_to '<i class="fa fa-trash"></i> Delete'.html_safe, admin_shift_path(shift), method: :delete, data: { confirm: 'Are you sure you want to delete this shift?' }, class: "btn btn-primary" %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
