
<div class='col-md-12 white'>
 <h1 class='page-header'><%= @shift.work_date %> <small class='white'><%= shift_times(@shift) %></small></h1>
    <h3 class="">
        <%= @employee.name %>  <%= @job.title %> - <%= @job.pay_rate %>/hr
    </h3>
    
   
  <div class='col-md-4'>
   
        <h4><%= @shift.state.humanize %> <%= shift_times_in_words(@shift) %> ago</h4>

   <%= render 'admin/jobs/clock', job: @job %>
     <h3>  Hours worked: <%= @shift.hours_worked %></h3>
  
    
   <h4> Total Earnings: <%= number_to_currency(@shift.earnings) %></h4>

 
 
  
  </div>

       
    
   <div class='col-md-4' id='break-times'>
       Total Break Time: <%= (@shift.break_duration).round(2) %>
    <% if @shift.breaks.any? %>
        <%= on_break_for(@shift) %>
    <% end %>
    <%= render 'list', shift: @shift %>

    
    </div>


 

 
<div class='col-md-4'>
    <h4>Shift Comments</h4>
        <div id='comment-list'>
            <% @shift.comments.each do |comment| %>
                <%= render 'comments/comment', comment: comment %>
            <% end %>
          <%= render partial: "comments/form", locals: {commentable: @shift} %>
         </div>
       
       
    
</div>
<div class="btn-group" role="group" aria-label="...">
    <%= link_to '<i class="fa fa-user"></i> Employee'.html_safe, admin_employee_path(@employee), class: "btn btn-info black" %> 
    <%= link_to '<i class="fa fa-clock-o"></i> Timesheet'.html_safe, admin_timesheet_path(@shift.timesheet), class: "btn btn-info black" %>
    <%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, edit_admin_shift_path(@shift), class: "btn btn-info black" %>
    <%= link_to '<i class="fa fa-trash"></i> Delete'.html_safe, admin_shift_path(@shift), method: :delete, data: { confirm: 'Are you sure you want to delete this shift?' }, class: "btn btn-info black" %>
    
</div>
    <div class="btn-group" role="group" aria-label="...">
        <%= link_to '<i class="fa fa-user"></i> Employee'.html_safe, admin_employee_path(@employee), class: "btn btn-primary" %> 
        <%= link_to '<i class="fa fa-clock-o"></i> Timesheet'.html_safe, admin_timesheet_path(@shift.timesheet), class: "btn btn-primary" %>
        <%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, edit_admin_shift_path(@shift), class: "btn btn-primary" %>
        <%= link_to '<i class="fa fa-trash"></i> Delete'.html_safe, admin_shift_path(@shift), method: :delete, data: { confirm: 'Are you sure you want to delete this shift?' }, class: "btn btn-primary" %>
    </div>

</div>
