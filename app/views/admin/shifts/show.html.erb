<% if @shift.past? %>
<h3 class='white text-center'> <i class="fa fa-calendar"></i> You are currently reviewing a shift from <%= distance_of_time_in_words(@shift.time_in, Time.current, include_seconds: true) %> ago</p>
<% end %>

<div class='col-md-12'>
        <div class='col-md-12'>
            <div class='col-md-8'>
                <h1 class="text-center">
                    <span id='shift-sym'><%= shift_sym(@shift) %></span>
                    <%= @employee.name %>  <small class='white'><%= @job.company.name %> </small>
                    <%= image_tag "http://maps.google.com/maps/api/staticmap?size=250x300&sensor=false&zoom=12&markers=#{@shift.latitude}%2C#{@shift.longitude}",
                    class: "img-zoom" %>
                    <h3> <%= @shift.latitude %> | <%= @shift.longitude %> </h3>
                </h1>
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <%= link_to '<i class="fa fa-user"></i> Employee'.html_safe, admin_employee_path(@employee), class: "btn btn-primary" %> 
                    <%= link_to '<i class="fa fa-clock-o"></i> Timesheet'.html_safe, admin_timesheet_path(@shift.timesheet), class: "btn btn-primary" %>
                    <%= link_to '<i class="fa fa-building-o"></i> Company'.html_safe, admin_company_path(@company), class: "btn btn-primary" %> 
                    <%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, edit_admin_shift_path(@shift), class: "btn btn-primary" %>
                    <%= link_to '<i class="fa fa-trash"></i> Delete'.html_safe, admin_shift_path(@shift), method: :delete, data: { confirm: 'Are you sure you want to delete this shift?' }, class: "btn btn-primary" %>
                </div>
                <h1 class='text-center'> <%= @job.title %> <small class='white'> <%= number_to_currency(@job.pay_rate) %>/hr</small></h1>
                <p class='lead'><%= markdownify(@shift.note) %></p>
            </div>
            <div class='col-md-4'>
                <h1 class='text-center'><%= @shift.work_date %>  </h1>
                <h1 class='text-center'><small class='white' id='shift-times'><%= shift_times(@shift) %></small></h1>
                
               
               <table class="table dark">
                    <tr>
                      <td class=""> Total Hours</td>
                      <td class=""> Total Earnings</td>
                    </tr>
                    <tr>
                      <td class=""><%= @shift.hours_worked %></td>
                      <td class=""><%= number_to_currency(@shift.earnings) %></td>
                    </tr>
                    <tr>
                      <td class="">Break type: <%= @shift.paid_breaks? ? "PAID" : "UNPAID" %></td>
                      <td class="">Pay rate: <%= number_to_currency(@shift.pay_rate) %></td>
                    </tr>
                </table>
                 <%= render 'admin/jobs/clock', job: @job %>
            </div>
            
        </div>
        <div class="col-md-6 white ">
            <div id='shift-break-times'>
                
            </div>
            <h4>Break Details</h4>
            <div class=''>
                <%= on_break_for(@shift) %>
        		<% if @shift.paid_breaks? %>
        			<h4> PAID BREAKS </h4>
        			<%= number_to_currency(@shift.with_paid_breaks) %>
        			 Total Break Time: <%= (@shift.break_duration).round(2) %>
        		<% else %>
        		<h4> UNPAID BREAKS </h4>
        		<%= number_to_currency(@shift.with_unpaid_breaks) %>
        		<br>
        		 Total Break Time: <%= (@shift.break_duration).round(2) %>
        		<% end %>
        	</div>
        	<%= render 'list', shift: @shift %>
        </div>
        <div class='col-md-6 white'>
            <h4>Shift Comments</h4>
            <div id='shift_<%=@shift.id%>'>
                <% @shift.comments.each do |comment| %>
                    <%= render 'comments/comment', comment: comment %>
                <% end %>
            </div>
              <%= render partial: "comments/form", locals: {commentable: @shift} %>
        </div>
        
</div>
