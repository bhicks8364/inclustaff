<div class="col-md-12 mainpage shadow">
<h1>
  <div class="pull-right">
    <%= link_to "New Conversation", new_admin_conversation_path, class: 'btn btn-primary' %>
  </div>

  All Conversations
</h1>
<%= link_to inbox_admin_conversations_path do %> Inbox (<%= current_admin.mailbox.inbox.unread(current_admin).count %>) <%end %>|
