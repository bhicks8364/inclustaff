<h1>New Conversation</h1>

<%= form_tag admin_conversations_path, method: :post do %>
  <h5>Recipients</h5>
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= select_tag :admin_ids, options_from_collection_for_select(@admins, :id, :name), class: "selectize", multiple: true, placeholder: "Admins" %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group">
        <%= select_tag :company_admin_ids, options_from_collection_for_select(@company_admins, :id, :name), class: "selectize", multiple: true, placeholder: "Company Admins" %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group">
        <%= select_tag :user_ids, options_from_collection_for_select(@users, :id, :name), class: "selectize", multiple: true, placeholder: "Employees" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= text_field_tag :subject, nil, required: true, placeholder: "Subject", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= text_area_tag :body, nil, required: true, placeholder: "Add a comment", class: "form-control myatwho", rows: 8 %>
  </div>

  <div class="form-group">
    <%= submit_tag "Send Message", class: "btn btn-primary" %>
  </div>
<% end %>
