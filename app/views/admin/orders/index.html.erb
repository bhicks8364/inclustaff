<div class="main-box">

		
		<% if @orders.needs_attention.any? %>
			<div class="alert alert-danger fade in text-center">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
		<i class="fa fa-exclamation-triangle fa-fw fa-lg"></i>
			<strong><%= pluralize(@orders.needs_attention.count, 'open job order') %> </strong>   </div>
		<% else %>
	<div class="alert alert-success fade in">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
		<i class="fa fa-check-square-o fa-fw fa-lg"></i>
			<strong><%= pluralize(@orders.needs_attention.count, 'open job order') %>. </strong>   </div>
		<% end %>
		
<% if @orders.needs_attention.any? %>

		<%= render 'open_table' %>

<%end%>

	<h2>All Active Job Orders</h2>
  <%= render 'admin/orders/table' %>



</div>