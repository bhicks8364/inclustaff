<div class='main-box'>
  
<% if current_admin.agency? %>
<%= link_to 'New Order', new_admin_order_path, class: "btn btn-info" %>
<% else %>
<%= link_to 'New Order', new_admin_company_order_path(current_admin.company), class: "btn btn-info" %>
<% end %>
<hr>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <% @orders.active.each do |order| %>
  <div class="panel panel-info">
    <div class="panel-heading" role="tab" id="<%= order.title_company %>">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse_<%= order.id %>" aria-expanded="false">
          <strong><%= order.title_company %></strong> <span class='pull-right badge'><%= order.jobs_count %>/<%= order.number_needed %></span>
          <%= link_to "<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>".html_safe, edit_admin_order_path(order), class: "pull-right" %>
          <%= link_to "<span class='glyphicon glyphicon-cog' aria-hidden='true'></span>".html_safe, admin_order_path(order), class: "pull-right" %>
        </a>
      </h4>
    </div>
    <div id="collapse_<%= order.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="<%= order.title_company %>">
      <div class="panel-body">
        
         <%= render order.jobs.active %>
         
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
<% @orders.each do |order| %>
<%= render 'department_list', order: order %>
<% end %>