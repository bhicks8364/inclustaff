  </thead>

  <tbody>
    <% @orders.active.each do |order| %>
      <tr>
        <td><%= link_to order.company_name, order.company %></td>
        <td><%= link_to order.title, admin_order_path(order) %></td>
        <td><%= order.pay_range %></td>

        <td><%= order.urgent %></td>

        <td><%= order.urgent %></td>
        <td><%= link_to "<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>".html_safe, edit_admin_order_path(order), class: "btn btn-default" %></td>
        <td><%= link_to "<span class='glyphicon glyphicon-trash' aria-hidden='true'></span>".html_safe, admin_order_path(order), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
