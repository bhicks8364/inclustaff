<%= div_for(order, class: 'lightbox') do %>
<div class=''><%= link_to title_for(order), admin_order_path(order), class: 'black' %> <span class='pull-right'><%= status_tag(order)%></span> 
<%= heavy_lifting(order) %>
</div>
<span class='pull-right'><%= skills_popover(order.skills) if order.skills.any?%></span>
<p class='text-left'><%= number_to_currency(order.min_pay) %> -  <%= number_to_currency(order.max_pay) %></p>

 <span class='label label-info black pull-right'>Open: <%= order.open_jobs %> </span>
   
      <%= matching_emp_popover(order) if order.matching_employees.any? %>
     
    <span class='label label-info black pull-left'><%= order.needed_by? ? order.needed_by.stamp("Mon 11/12") : "n/a" %> </span>
        

    
<% end %>      




 

