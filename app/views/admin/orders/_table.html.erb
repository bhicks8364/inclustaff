<div class="table-responsive">
  <table id="timesheets" class="table" cellspacing="0.5" width="85%%">
  <thead>
    <tr>
      <th></th>
      <th>Company</th>
      <th>Title</th>
      <th>Pay Range</th>
      <th>Open </th>
      <th>Rate</th>
      <th>Start Date</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.active.each do |order| %>
      <tr>
        <td><% if order.needs_attention? %> <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <% else %>
        <span class="glyphicon glyphicon-check" aria-hidden="true"></span> 
            <% end %>
        </td>
        <td><%= link_to order.company_name, order.company %></td>
        <td><%= link_to order.title, admin_company_order_path(order.company, order) %></td>
        <td><%= order.pay_range %></td>
        <td><%= order.open_jobs %></td>
        <td><%= order.mark_up_percent %></td>
        <td><%= order.needed_by? ? order.needed_by.strftime("%B %e, %Y") : "n/a" %></td>

        <td><%= link_to "<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>".html_safe, edit_admin_company_order_path(order.company, order), class: "btn btn-default" %></td>
        <td><%= link_to "<span class='glyphicon glyphicon-trash' aria-hidden='true'></span>".html_safe, admin_company_order_path(order.company, order), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


  </div>
