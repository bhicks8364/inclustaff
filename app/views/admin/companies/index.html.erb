<h1>All Companies</h1>
<%= javascript_tag do %>
  window.companiesURL = '<%= j companies_url %>';
  window.companies = <%= raw Company.limit(10).to_json %>
<% end %>
<%= content_tag "div", id: "companies", data: {url: Company.limit(10) } do %>
  Loading companies...
<% end %>


<div class="table-responsive">
  <table id="myTable" class="table" cellspacing="0.5" width="85%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Orders</th>
      <th>Active Employees</th>
      <th>Balance</th>
      <th>Last Week Bill</th>
      <th>Contact name</th>
      <th>Contact email</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= render company %></td>
        <td>
          <% if company.owner.present? %>
            <%=  link_to company.owner.name, company.owner %>
          <% else %>
            <%= company.contact_name %>
          <%end %></td>
        <td><%= company.orders.filled.count %></td>
        <td><%= number_to_currency(company.balance) %></td>
        <td><%= number_to_currency(company.timesheets.last_week.sum(:total_bill) )%></td>
        <td><%= company.contact_name %></td>
        <td><%= company.contact_email %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Company', new_company_path %>
