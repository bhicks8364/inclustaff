<div class='col-md-12'>
  <div class='col-md-6 text-left'>
  <h4><%= company.name %></h4>
</div>

<div class='col-md-6 text-center'>
  <a class='btn btn-primary btn-lg btn-block' data-toggle="modal" data-target="#company_mod_<%= company.id %>">
<span class='pull-left'><%= company.name %></span><br>

	<span class=''>	<strong><%= company.contact_name %></strong></span><br>
	<span class='small'><%= company.contact_email %></span>
	
</a>
</div>
</div>





<!-- Modal -->
<div class="modal fade" id="company_mod_<%= company.id %>" tabindex="-1" role="dialog" aria-labelledby="#<%= company.name %>">
  <div class="modal-dialog" role="document">
    <div class="modal-content dark">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= company.name %></h4>
        
      </div>
      <div class="modal-body">
        <%= link_to(new_admin_company_order_path(company), class: 'btn btn-primary') do %>
      					<i class="fa fa-certificate fa-lg"></i> 
      					New Job Order
      				<% end %>
      	<%= link_to(admin_company_invoices_path(company), class: 'btn btn-primary') do %>
      					<i class="fa fa-money fa-lg"></i> 
      				View Invoices
      				<% end %>

        

      </div>
      <div class="modal-footer">
        
        <div class="btn-toolbar" role="toolbar" aria-label="...">
          <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button></div>
          <div class="btn-group" role="group" aria-label="...">
            <%= link_to(admin_company_path(company), class: 'btn btn-primary') do %>
      					<i class="fa fa-building-o fa-lg"></i>
      					View Company
      				<% end %>
            <%= link_to(admin_company_orders_path(company), class: 'btn btn-primary') do %>
      					<i class="fa fa-list-alt fa-lg"></i> 
      					Company Orders
      				<% end %>
      				<%= link_to(edit_admin_company_path(company), class: 'btn btn-primary') do %>
      					<i class="fa fa-pencil-square fa-lg"></i> 
      					Edit Company
      				<% end %>
          </div>
          
        </div>
        
  				
      </div>
    </div>
  </div>
</div>