
<%= simple_form_for [:admin, skillable, Skill.new], :remote => true, class: "form-inline" do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :name, label: false, placeholder: "Type # for suggestions", input_html: {class: "form-control", autocomplete: :off, id: "autocomplete"}%>
    <% if skillable.class.to_s == "Order" %>
       <%= f.input :required, label: 'Is this a requirement?', input_html: {class: "form-control"} %>
    <% end %>
   
    

  <%= f.hidden_field :skillable_id, :value => skillable.id %>
    <%= f.hidden_field :skillable_type, :value => skillable.class %>

 
    <%= f.button :submit, class: "btn-default inline" %>
 
<% end %>
