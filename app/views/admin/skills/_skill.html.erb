<% if skill.new_record? %>

<% else %>
<%= div_for(skill) do %>

    <%= skill.required? ? "<i class='fa fa-star'></i>".html_safe : "<i class='fa fa-star-o'></i>".html_safe %> <strong><%= skill.name %></strong>
    <%= link_to(skill, method: :delete, remote: true, data: { confirm: 'Are you sure?' }) do %>
					<span class="fa-stack">
						<i class="fa fa-square fa-stack-3x fa-inverse"></i>
						<i class="fa fa-trash-o fa-stack-1x "></i>
					</span>
				<% end %>

<% end %>

<% end %>