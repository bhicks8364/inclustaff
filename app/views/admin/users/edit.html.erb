<h2>Edit <%= @user.name %></h2>

<%= simple_form_for([:admin, @user]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, placeholder: "First name" %>
    <%= f.input :last_name, required: true, placeholder: "Last name" %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :code %>
    <%= f.input :can_edit %>


   

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>
  
  
  
  
  
<% end %>




<%= link_to "Back", :back %>
