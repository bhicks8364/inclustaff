<p id="notice"><%= notice %></p>

<h1>Listing Inquiries</h1>

<table class='table table-bordered table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Job title</th>
      <th>Agency name</th>
      <th>Email</th>
      <th>Agency size</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inquiries.each do |inquiry| %>
      <tr>
        <td><%= inquiry.name %></td>
        <td><%= inquiry.job_title %></td>
        <td><%= inquiry.agency_name %></td>
        <td><%= inquiry.email %></td>
        <td><%= inquiry.agency_size %></td>
        <td><%= inquiry.phone_number %></td>
        <td><%= link_to 'Show', inquiry %></td>
        <td><%= link_to 'Edit', edit_inquiry_path(inquiry) %></td>
        <td><%= link_to 'Destroy', inquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

