
<html>
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>IncluStaff</title>
	

	<%= Gon::Base.render_data %>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  	<%= javascript_include_tag 'application' %>

	<!-- google font libraries -->
	<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,300|Titillium+Web:200,300,400' rel='stylesheet' type='text/css'>

	<%= csrf_meta_tags %>
</head>

<body>


		<%= render 'shared/navbar' %>
	<div class="container">
		<div class="row">
		<% if admin_signed_in? && current_admin.owner? && current_admin.agency? %><%= render 'admin/shared/admin_sidebar' %><% end %>
		<% if admin_signed_in? && current_admin.owner? && current_admin.company? %><%= render 'admin/shared/company_sidebar' %><% end %>
		<% if admin_signed_in? && current_admin.recruiter? %><%= render 'admin/shared/recruiter_sidebar' %><% end %>
		<% if user_signed_in? %><%= render 'shared/employee_sidebar' %><% end %>
			<div class="col-md-10" id="content-wrapper">

				<% if alert %><div class="alert alert-warning"><%= flash.alert %></div> <% end %>
	    		<% if notice %> <div class="alert alert-info"><%= flash.notice %></div> <% end %>
	    		<%= yield %>


	    	</div>
		</div>
	</div>
	<%= render 'layouts/footer' %>

</body>
</html>
						
